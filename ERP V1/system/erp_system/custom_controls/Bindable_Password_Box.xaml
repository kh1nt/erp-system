<UserControl x:Class="erp_system.custom_controls.Bindable_Password_Box"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:erp_system.custom_controls"
             xmlns:icon="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="800">
    <Grid>
        <PasswordBox x:Name="password_text"
                     FontSize="13"
                     FontWeight="Medium"
                     FontFamily="Segoe UI"
                     Background="Transparent"
                     Foreground="LightGray"
                     CaretBrush="LightSlateGray"
                     BorderBrush="White"
                     BorderThickness="0,0,0,1"
                     VerticalContentAlignment="Center"
                     Padding="0,0,30,0"/>
        
        <TextBox x:Name="password_textbox"
                 FontSize="13"
                 FontWeight="Medium"
                 FontFamily="Segoe UI"
                 Background="Transparent"
                 Foreground="LightGray"
                 CaretBrush="LightSlateGray"
                 BorderBrush="White"
                 BorderThickness="0,0,0,1"
                 VerticalContentAlignment="Center"
                 Padding="0,0,30,0"
                 Visibility="Collapsed"/>
        
        <Button x:Name="password_toggle"
                Width="30"
                Height="30"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Margin="0,0,5,0"
                Background="Transparent"
                BorderThickness="0"
                Click="PasswordToggle_Click">
            <icon:IconImage Icon="Eye" Width="16" Height="16" Foreground="LightGray"/>
        </Button>
    </Grid>
</UserControl>
