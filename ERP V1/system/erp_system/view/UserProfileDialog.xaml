<Window x:Class="erp_system.UserProfileDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:icon="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        xmlns:VModel="clr-namespace:erp_system.view_model"
        mc:Ignorable="d"
        Title="User Profile" Height="500" Width="500"
        Background="Transparent"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <VModel:UserProfile_View_Model />
    </Window.DataContext>

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <!-- Main Container -->
    <Border CornerRadius="10"
            BorderThickness="1"
            BorderBrush="{StaticResource BorderColor}"
            Background="White">

        <Grid>
            <Grid.RowDefinitions>
                <!-- Header -->
                <RowDefinition Height="60"/>
                <!-- Content -->
                <RowDefinition Height="*"/>
                <!-- Footer -->
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <!-- Header - Matches Side Menu Style -->
            <Border Grid.Row="0" 
                    Background="{StaticResource GradientSecondary}" 
                    CornerRadius="10,10,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- User Icon -->
                    <Border Grid.Column="0" 
                            Width="40" 
                            Height="40" 
                            CornerRadius="20" 
                            Background="{StaticResource Color1}" 
                            Margin="15,0,0,0" 
                            VerticalAlignment="Center">
                        <icon:IconImage Icon="User"
                                        Height="20"
                                        Width="20"
                                        Foreground="{StaticResource FontDark}"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                    </Border>

                    <!-- Title -->
                    <TextBlock Grid.Column="1"
                               Text="User Profile"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="{StaticResource FontDark}"
                               VerticalAlignment="Center"
                               Margin="10,0,0,0"/>

                    <!-- Close Button -->
                    <Button Grid.Column="2"
                            Style="{StaticResource Control_Button}"
                            Click="Close_Button_Click"
                            Margin="0,0,15,0"
                            Background="Transparent"
                            BorderThickness="0">
                        <icon:IconImage Icon="Times" Width="18" Height="18" Foreground="{StaticResource FontDark}"/>
                    </Button>
                </Grid>
            </Border>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" Margin="20,15,20,15" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Profile Picture -->
                    <StackPanel HorizontalAlignment="Center" Margin="0,15,0,15">
                        <Ellipse Height="70"
                                 Width="70"
                                 Fill="{StaticResource Color1}"
                                 Stroke="{StaticResource BorderColor}"
                                 StrokeThickness="2"/>
                    </StackPanel>

                    <!-- User Info -->
                    <StackPanel HorizontalAlignment="Center" Margin="0,0,0,20">
                        <!-- Employee Name (Editable) -->
                        <StackPanel HorizontalAlignment="Center" Margin="0,0,0,10">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="{Binding CurrentUser.EmployeeName}"
                                           FontSize="24"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource FontDark}"
                                           HorizontalAlignment="Center"
                                           Visibility="{Binding IsNotEditingName, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                <TextBox Text="{Binding TempEmployeeName}"
                                         FontSize="24"
                                         FontWeight="Bold"
                                         Foreground="{StaticResource FontDark}"
                                         Background="White"
                                         BorderThickness="2"
                                         BorderBrush="{StaticResource Color1}"
                                         Padding="8,4"
                                         MinWidth="200"
                                         HorizontalAlignment="Center"
                                         Visibility="{Binding IsEditingName, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                <Button Style="{StaticResource Control_Button}"
                                        Command="{Binding EditNameCommand}"
                                        Width="30"
                                        Height="30"
                                        Margin="10,0,0,0"
                                        Background="{StaticResource Color1}"
                                        BorderThickness="0"
                                        Visibility="{Binding IsNotEditingName, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <icon:IconImage Icon="Edit" Width="14" Height="14" Foreground="{StaticResource FontDark}"/>
                                </Button>
                                <StackPanel Orientation="Horizontal" Margin="10,0,0,0"
                                            Visibility="{Binding IsEditingName, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <Button Style="{StaticResource Control_Button}"
                                            Command="{Binding SaveNameCommand}"
                                            Width="30"
                                            Height="30"
                                            Margin="0,0,5,0"
                                            Background="{StaticResource SuccessBrush}"
                                            BorderThickness="0">
                                        <icon:IconImage Icon="Check" Width="14" Height="14" Foreground="White"/>
                                    </Button>
                                    <Button Style="{StaticResource Control_Button}"
                                            Command="{Binding CancelNameEditCommand}"
                                            Width="30"
                                            Height="30"
                                            Background="{StaticResource ErrorBrush}"
                                            BorderThickness="0">
                                        <icon:IconImage Icon="Times" Width="14" Height="14" Foreground="White"/>
                                    </Button>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>

                        <!-- Role -->
                        <TextBlock Text="{Binding CurrentUser.RoleName}"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource FontDark}"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,10"/>

                        <!-- Username (Editable) -->
                        <StackPanel HorizontalAlignment="Center">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="{Binding CurrentUser.UserName}"
                                           FontSize="14"
                                           Foreground="{StaticResource FontDark}"
                                           HorizontalAlignment="Center"
                                           Visibility="{Binding IsNotEditingUsername, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                <TextBox Text="{Binding TempUsername}"
                                         FontSize="14"
                                         Foreground="{StaticResource FontDark}"
                                         Background="White"
                                         BorderThickness="2"
                                         BorderBrush="{StaticResource Color1}"
                                         Padding="6,3"
                                         MinWidth="120"
                                         HorizontalAlignment="Center"
                                         Visibility="{Binding IsEditingUsername, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                <Button Style="{StaticResource Control_Button}"
                                        Command="{Binding EditUsernameCommand}"
                                        Width="26"
                                        Height="26"
                                        Margin="8,0,0,0"
                                        Background="{StaticResource Color1}"
                                        BorderThickness="0"
                                        Visibility="{Binding IsNotEditingUsername, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <icon:IconImage Icon="Edit" Width="12" Height="12" Foreground="{StaticResource FontDark}"/>
                                </Button>
                                <StackPanel Orientation="Horizontal" Margin="8,0,0,0"
                                            Visibility="{Binding IsEditingUsername, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <Button Style="{StaticResource Control_Button}"
                                            Command="{Binding SaveUsernameCommand}"
                                            Width="26"
                                            Height="26"
                                            Margin="0,0,5,0"
                                            Background="{StaticResource SuccessBrush}"
                                            BorderThickness="0">
                                        <icon:IconImage Icon="Check" Width="12" Height="12" Foreground="White"/>
                                    </Button>
                                    <Button Style="{StaticResource Control_Button}"
                                            Command="{Binding CancelUsernameEditCommand}"
                                            Width="26"
                                            Height="26"
                                            Background="{StaticResource ErrorBrush}"
                                            BorderThickness="0">
                                        <icon:IconImage Icon="Times" Width="12" Height="12" Foreground="White"/>
                                    </Button>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>

                    <!-- Account Info -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Account Information"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource FontDark}"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,15"/>

                        <Grid HorizontalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="User ID:" FontWeight="Medium" Margin="0,0,0,8" Foreground="{StaticResource FontDark}"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding CurrentUser.UserID}" Margin="0,0,0,8" Foreground="{StaticResource FontDark}"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Role:" FontWeight="Medium" Margin="0,0,0,8" Foreground="{StaticResource FontDark}"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding CurrentUser.RoleName}" Margin="0,0,0,8" Foreground="{StaticResource FontDark}"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Employee ID:" FontWeight="Medium" Margin="0,0,0,8" Foreground="{StaticResource FontDark}"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding CurrentUser.EmployeeID}" Margin="0,0,0,8" Foreground="{StaticResource FontDark}"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Member Since:" FontWeight="Medium" Margin="0,0,0,8" Foreground="{StaticResource FontDark}"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding CurrentUser.CreatedAt, StringFormat='{}{0:MMM dd, yyyy}'}" Margin="0,0,0,8" Foreground="{StaticResource FontDark}"/>
                        </Grid>
                    </StackPanel>

                    <!-- Change Password Button -->
                    <Button Style="{StaticResource Control_Button}"
                            Command="{Binding ChangePasswordCommand}"
                            Height="50"
                            Width="Auto"
                            MinWidth="200"
                            HorizontalAlignment="Stretch"
                            Background="{StaticResource Color1}"
                            BorderThickness="1"
                            BorderBrush="{StaticResource BorderColor}"
                            Margin="0,0,0,20">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <icon:IconImage Icon="Key" Width="18" Height="18" Margin="0,0,10,0" Foreground="{StaticResource FontDark}"/>
                            <TextBlock Text="Change Password" Foreground="{StaticResource FontDark}" FontSize="16" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </ScrollViewer>

            <!-- Footer - Matches Side Menu Style -->
            <Border Grid.Row="2"
                    Background="{StaticResource GradientSecondary}"
                    CornerRadius="0,0,10,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="1"
                                Orientation="Horizontal"
                                VerticalAlignment="Center"
                                Margin="0,0,20,0">

                        <Button Style="{StaticResource Control_Button}"
                                Command="{Binding LogoutCommand}"
                                Margin="0,0,10,0"
                                Padding="15,8"
                                Height="35"
                                MinWidth="80"
                                Background="Transparent"
                                BorderThickness="1"
                                BorderBrush="{StaticResource ErrorBrush}">
                            <StackPanel Orientation="Horizontal">
                                <icon:IconImage Icon="SignOutAlt" Width="14" Height="14" Margin="0,0,6,0" Foreground="{StaticResource ErrorBrush}"/>
                                <TextBlock Text="Logout" Foreground="{StaticResource ErrorBrush}" FontSize="14" FontWeight="Medium"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource Control_Button}"
                                Click="Close_Button_Click"
                                Padding="15,8"
                                Height="35"
                                MinWidth="80"
                                Background="Transparent"
                                BorderThickness="1"
                                BorderBrush="{StaticResource BorderColor}">
                            <StackPanel Orientation="Horizontal">
                                <icon:IconImage Icon="Times" Width="14" Height="14" Margin="0,0,6,0" Foreground="{StaticResource FontDark}"/>
                                <TextBlock Text="Close" Foreground="{StaticResource FontDark}" FontSize="14" FontWeight="Medium"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>