<Window x:Class="erp_system.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:erp_system.view"
        xmlns:VModel="clr-namespace:erp_system.view_model"
        xmlns:icon="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="1400"
        Background="Transparent"
        ResizeMode="CanResizeWithGrip"
        AllowsTransparency="True"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <VModel:Main_View_Model />
    </Window.DataContext>

    <Window.Resources>
        <local:StringToBoolConverter x:Key="StringToBoolConverter"/>
        <local:AdminRoleToVisibilityConverter x:Key="AdminRoleToVisibilityConverter"/>
        <DataTemplate DataType="{x:Type VModel:Dashboard_View_Model}">
            <local:Dashboard_View/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type VModel:Employees_View_Model}">
            <local:Employees_View/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type VModel:Sales_View_Model}">
            <local:Sales_View/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type VModel:Performance_View_Model}">
            <local:Performance_View/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type VModel:Insights_Analytics_View_Model}">
            <local:Insights_Analytics_View/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type VModel:Payroll_View_Model}">
            <local:Payroll_View/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type VModel:Leave_Management_View_Model}">
            <local:Leave_Management_View/>
        </DataTemplate>
    </Window.Resources>

    <Border 
                CornerRadius="10"
                BorderThickness="2"
                BorderBrush="{StaticResource BorderGradient}">

        <Grid>
            <Grid.ColumnDefinitions>
                <!-- Side Bar -->
                <ColumnDefinition Width="250"/>
                <!-- Content Section -->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Side Bar -->
            <Border CornerRadius="10,0,0,10"
                    Grid.Column="0"
                    Background="{StaticResource GradientSecondary}">

                <StackPanel Background="Transparent">

                    <!-- Logo -->
                    <StackPanel Orientation="Horizontal"
                                Height="75"
                                Margin="20,25,20,35"
                                Background="Transparent"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                        <Image Source="/assets/avielle_logo.png" 
                               Width="45"
                               Height="45"
                               Stretch="Uniform"
                               VerticalAlignment="Center"/>
                        <TextBlock Text="AVIELLE"
                                   FontFamily="Georgia"
                                   FontSize="30"
                                   FontWeight="Bold"
                                   Foreground="Black"
                                   VerticalAlignment="Center"
                                   Margin="12,0,0,0"/>

                    </StackPanel>
                    <!-- Navigation Buttons -->
                    <RadioButton Style="{StaticResource Nav_Button}"
                                 Tag="{StaticResource ResourceKey=Color1}"
                                 GroupName="NavigationGroup"
                                 IsChecked="{Binding CurrentView, Converter={StaticResource StringToBoolConverter}, ConverterParameter=Dashboard, Mode=OneWay}"
                                 Command="{Binding Show_Dashboard_View_Command}">
                        <StackPanel Orientation="Horizontal"
                                    Background="Transparent">
                            <icon:IconImage Icon="Home" Style="{StaticResource Nav_Button_Icon}" />
                            <TextBlock Text="Dashboard" Style="{StaticResource Nav_Button_Text}"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton Style="{StaticResource Nav_Button}"
                                 Tag="{StaticResource ResourceKey=Color1}"
                                 GroupName="NavigationGroup"
                                 IsChecked="{Binding CurrentView, Converter={StaticResource StringToBoolConverter}, ConverterParameter=Employees, Mode=OneWay}"
                                 Command="{Binding Show_Employees_View_Command}">
                        <StackPanel Orientation="Horizontal"
                                    Background="Transparent">
                            <icon:IconImage Icon="UserGroup" Style="{StaticResource Nav_Button_Icon}" />
                            <TextBlock Text="Employee Management" Style="{StaticResource Nav_Button_Text}"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton Style="{StaticResource Nav_Button}"
                                 Tag="{StaticResource ResourceKey=Color1}"
                                 GroupName="NavigationGroup"
                                 IsChecked="{Binding CurrentView, Converter={StaticResource StringToBoolConverter}, ConverterParameter=Sales, Mode=OneWay}"
                                 Command="{Binding Show_Sales_View_Command}">
                        <StackPanel Orientation="Horizontal"
                                    Background="Transparent">
                            <icon:IconImage Icon="ChartArea" Style="{StaticResource Nav_Button_Icon}" />
                            <TextBlock Text="Sales" Style="{StaticResource Nav_Button_Text}"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton Style="{StaticResource Nav_Button}"
                                 Tag="{StaticResource ResourceKey=Color1}"
                                 GroupName="NavigationGroup"
                                 IsChecked="{Binding CurrentView, Converter={StaticResource StringToBoolConverter}, ConverterParameter=Performance, Mode=OneWay}"
                                 Command="{Binding Show_Performance_View_Command}">
                        <StackPanel Orientation="Horizontal"
                                    Background="Transparent">
                            <icon:IconImage Icon="ChartSimple" Style="{StaticResource Nav_Button_Icon}" />
                            <TextBlock Text="Performance" Style="{StaticResource Nav_Button_Text}"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton Style="{StaticResource Nav_Button}"
                                 Tag="{StaticResource ResourceKey=Color1}"
                                 GroupName="NavigationGroup"
                                 IsChecked="{Binding CurrentView, Converter={StaticResource StringToBoolConverter}, ConverterParameter=Payroll, Mode=OneWay}"
                                 Command="{Binding Show_Payroll_View_Command}">
                        <StackPanel Orientation="Horizontal"
                                    Background="Transparent">
                            <icon:IconImage Icon="MoneyCheckDollar" Style="{StaticResource Nav_Button_Icon}" />
                            <TextBlock Text="Payroll" Style="{StaticResource Nav_Button_Text}"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton Style="{StaticResource Nav_Button}"
                                 Tag="{StaticResource ResourceKey=Color1}"
                                 GroupName="NavigationGroup"
                                 IsChecked="{Binding CurrentView, Converter={StaticResource StringToBoolConverter}, ConverterParameter=LeaveManagement, Mode=OneWay}"
                                 Command="{Binding Show_Leave_Management_View_Command}">
                        <StackPanel Orientation="Horizontal"
                                    Background="Transparent">
                            <icon:IconImage Icon="CalendarDay" Style="{StaticResource Nav_Button_Icon}" />
                            <TextBlock Text="Leave Management" Style="{StaticResource Nav_Button_Text}"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton Style="{StaticResource Nav_Button}"
                                 Tag="{StaticResource ResourceKey=Color1}"
                                 GroupName="NavigationGroup"
                                 IsChecked="{Binding CurrentView, Converter={StaticResource StringToBoolConverter}, ConverterParameter=Insights, Mode=OneWay}"
                                 Command="{Binding Show_Insights_Analytics_View_Command}">
                        <StackPanel Orientation="Horizontal"
                                    Background="Transparent">
                            <icon:IconImage Icon="FileContract" Style="{StaticResource Nav_Button_Icon}" />
                            <TextBlock Text="Reports" Style="{StaticResource Nav_Button_Text}"/>
                        </StackPanel>
                    </RadioButton>

                    <!-- User Registration Button (Admin Only) - Very Bottom of Menu -->
                    <Button Tag="{StaticResource Color1}"
                            Height="50"
                            Margin="-5,30,0,10"
                            Command="{Binding Show_User_Registration_Command}"
                            Visibility="{Binding Current_User_Account.RoleName, Converter={StaticResource AdminRoleToVisibilityConverter}}"
                            ToolTip="Create HR User Account"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="{StaticResource BgPrimary}">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderThickness="4,0,0,0"
                                                    BorderBrush="Transparent">
                                                <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{StaticResource FadeWhite}"/>
                                        <Setter Property="Foreground" Value="{StaticResource FontLight}"/>
                                        <Setter Property="BorderBrush" Value="{Binding Path=Tag, RelativeSource={RelativeSource Self}}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <StackPanel Orientation="Horizontal"
                                    Background="Transparent">
                            <icon:IconImage Icon="UserPlus" Style="{StaticResource Nav_Button_Icon}" />
                            <TextBlock Text="Create User" Style="{StaticResource Nav_Button_Text}"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

            </Border>

            <!-- Main Section -->
            <Border CornerRadius="0,10,10,0"
                    Grid.Column="1"
                    Background="{StaticResource BackgroundColor}">

                <Grid>
                    <Grid.RowDefinitions>
                        <!-- Control Bar -->
                        <RowDefinition Height="40"/>
                        <!-- Header/Caption -->
                        <RowDefinition Height="50"/>
                        <!-- Content / Child View -->
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Control Bar -->
                    <StackPanel x:Name="Control_Bar_Panel"
                                Orientation="Horizontal"
                                FlowDirection="RightToLeft"
                                Background="Transparent"
                                Margin="2"
                                MouseLeftButtonDown="Control_Bar_Panel_MouseLeftButtonDown"
                                MouseEnter="Control_Bar_Panel_MouseEnter">
                        <Button x:Name="Close_Button"
                                Style="{StaticResource Control_Button}"
                                Click="Close_Button_Click">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE8BB;" FontSize="10"/>

                        </Button>

                        <Button x:Name="Maximize_Button"
                                Style="{StaticResource Control_Button}"
                                Click="Maximize_Button_Click">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE922;" FontSize="10"/>

                        </Button>

                        <Button x:Name="Minimize_Button"
                                Style="{StaticResource Control_Button}"
                                Click="Minimize_Button_Click">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE921;" FontSize="10"/>
                        </Button>
                    </StackPanel>

                    <!-- Header/Caption -->
                    <Grid Grid.Row="1"
                          Margin="0,0,0,0" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <!-- Caption -->
                        <StackPanel Grid.Column="0"
                                    Orientation="Horizontal"
                                    VerticalAlignment="Center">

                            <icon:IconImage Icon="{Binding Icon}"
                                            Height="20"
                                            Width="20"
                                            Margin="35,0,10,0"
                                            Foreground="{StaticResource FontDark}"/>

                            <TextBlock Text="{Binding Caption}"
                                       Foreground="{StaticResource FontDark}"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       VerticalAlignment="Center"/>

                        </StackPanel>

                        <!-- User Option -->
                        <StackPanel Grid.Column="1"
                                    Orientation="Horizontal"
                                    FlowDirection="RightToLeft"
                                    VerticalAlignment="Center"
                                    Margin="0,0,50,0" Grid.ColumnSpan="2">
                            <Button Style="{StaticResource Icon_Button}"
                                    Tag="{StaticResource Color1}"
                                    Height="40"
                                    Width="40"
                                    VerticalAlignment="Center"
                                    Command="{Binding Show_User_Profile_Command}">
                                <Ellipse Height="40"
                                         Width="40"
                                         Fill="{StaticResource Color1}">

                                </Ellipse>

                            </Button>

                        </StackPanel>

                    </Grid>

                    <!-- Content / Child View -->
                    <ContentControl Content="{Binding Current_Child_View}"
                                    Grid.Row="2"
                                    Margin="5"/>

                </Grid>

            </Border>
        </Grid>
    </Border>

</Window>
