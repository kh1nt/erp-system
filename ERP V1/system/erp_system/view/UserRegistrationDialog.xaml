<Window x:Class="erp_system.UserRegistrationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:icon="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        xmlns:VModel="clr-namespace:erp_system.view_model"
        xmlns:custom_controls="clr-namespace:erp_system.custom_controls"
        mc:Ignorable="d"
        Title="Create HR User Account" Height="650" Width="650"
        Background="Transparent"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <VModel:UserRegistrationViewModel />
    </Window.DataContext>

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <!-- Main Container -->
    <Border CornerRadius="10"
            BorderThickness="1"
            BorderBrush="{StaticResource BorderColor}"
            Background="White">

        <Grid>
            <Grid.RowDefinitions>
                <!-- Header -->
                <RowDefinition Height="60"/>
                <!-- Content -->
                <RowDefinition Height="*"/>
                <!-- Footer -->
                <RowDefinition Height="80"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" 
                    Background="{StaticResource GradientSecondary}" 
                    CornerRadius="10,10,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- User Icon -->
                    <Border Grid.Column="0" 
                            Width="40" 
                            Height="40" 
                            CornerRadius="20" 
                            Background="{StaticResource Color1}" 
                            Margin="15,0,0,0" 
                            VerticalAlignment="Center">
                        <icon:IconImage Icon="UserPlus"
                                        Height="20"
                                        Width="20"
                                        Foreground="{StaticResource FontDark}"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                    </Border>

                    <!-- Title -->
                    <TextBlock Grid.Column="1"
                               Text="Create HR User Account"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="{StaticResource FontDark}"
                               VerticalAlignment="Center"
                               Margin="10,0,0,0"/>

                    <!-- Close Button -->
                    <Button Grid.Column="2"
                            Style="{StaticResource Control_Button}"
                            Click="Close_Button_Click"
                            Margin="0,0,15,0"
                            Background="Transparent"
                            BorderThickness="0">
                        <icon:IconImage Icon="Times" Width="18" Height="18" Foreground="{StaticResource FontDark}"/>
                    </Button>
                </Grid>
            </Border>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" Margin="30,20,30,20" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Admin Notice -->
                    <Border Background="{StaticResource Color1}" 
                            CornerRadius="8" 
                            Padding="15" 
                            Margin="0,0,0,20">
                        <StackPanel Orientation="Horizontal">
                            <icon:IconImage Icon="InfoCircle" 
                                           Width="20" 
                                           Height="20" 
                                           Foreground="{StaticResource FontDark}" 
                                           Margin="0,0,10,0"/>
                            <TextBlock Text="Only HR Department employees can be assigned user accounts. Admin access required." 
                                       Foreground="{StaticResource FontDark}" 
                                       FontWeight="Medium" 
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>

                    <!-- Employee Selection -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Select HR Employee" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="{StaticResource FontDark}" 
                                   Margin="0,0,0,10"/>
                        
                        <ComboBox ItemsSource="{Binding HREmployees}"
                                  SelectedItem="{Binding SelectedEmployee}"
                                  Height="40"
                                  FontSize="14"
                                  Padding="10,0"
                                  Background="White"
                                  BorderBrush="{StaticResource BorderColor}"
                                  BorderThickness="2">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock Text="{Binding FullName}" FontWeight="Medium"/>
                                        <TextBlock Text="{Binding Position}" FontSize="12" Foreground="Gray"/>
                                        <TextBlock Text="{Binding Email}" FontSize="11" Foreground="Gray"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        
                        <TextBlock Text="{Binding EmployeeSelectionError}" 
                                   Foreground="{StaticResource ErrorBrush}" 
                                   FontSize="12" 
                                   Margin="0,5,0,0"
                                   Visibility="{Binding HasEmployeeSelectionError, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    </StackPanel>

                    <!-- User Account Details -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="User Account Details" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="{StaticResource FontDark}" 
                                   Margin="0,0,0,15"/>
                        
                        <!-- Username -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Username" 
                                       FontWeight="Medium" 
                                       Foreground="{StaticResource FontDark}" 
                                       Margin="0,0,0,5"/>
                            <TextBox Text="{Binding Username}" 
                                     Height="35" 
                                     FontSize="14" 
                                     Padding="10,0"
                                     Background="White"
                                     BorderBrush="{StaticResource BorderColor}"
                                     BorderThickness="2"/>
                            <TextBlock Text="{Binding UsernameError}" 
                                       Foreground="{StaticResource ErrorBrush}" 
                                       FontSize="12" 
                                       Margin="0,5,0,0"
                                       Visibility="{Binding HasUsernameError, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        </StackPanel>

                        <!-- Role Selection -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Role" 
                                       FontWeight="Medium" 
                                       Foreground="{StaticResource FontDark}" 
                                       Margin="0,0,0,5"/>
                            <ComboBox ItemsSource="{Binding AvailableRoles}"
                                      SelectedItem="{Binding SelectedRole}"
                                      Height="35"
                                      FontSize="14"
                                      Padding="10,0"
                                      Background="White"
                                      BorderBrush="{StaticResource BorderColor}"
                                      BorderThickness="2"/>
                            <TextBlock Text="{Binding RoleError}" 
                                       Foreground="{StaticResource ErrorBrush}" 
                                       FontSize="12" 
                                       Margin="0,5,0,0"
                                       Visibility="{Binding HasRoleError, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        </StackPanel>

                        <!-- Password Section -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Password" 
                                       FontWeight="Medium" 
                                       Foreground="{StaticResource FontDark}" 
                                       Margin="0,0,0,5"/>
                            
                            <custom_controls:Bindable_Password_Box
                                        Password="{Binding Password, UpdateSourceTrigger=PropertyChanged}"
                                        Height="35" 
                                        FontSize="14" 
                                        Padding="10,0"
                                        Background="White"
                                        BorderBrush="{StaticResource BorderColor}"
                                        BorderThickness="2"/>
                            
                            <TextBlock Text="{Binding PasswordError}" 
                                       Foreground="{StaticResource ErrorBrush}" 
                                       FontSize="12" 
                                       Margin="0,5,0,0"
                                       Visibility="{Binding HasPasswordError, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            
                            <!-- Password Requirements -->
                            <Border Background="#F8F9FA" 
                                    CornerRadius="5" 
                                    Padding="10" 
                                    Margin="0,10,0,0">
                                <StackPanel>
                                    <TextBlock Text="Password Requirements:" 
                                               FontWeight="Medium" 
                                               FontSize="12" 
                                               Foreground="{StaticResource FontDark}" 
                                               Margin="0,0,0,5"/>
                                    <TextBlock Text="• Minimum 8 characters" 
                                               FontSize="11" 
                                               Foreground="Gray"/>
                                    <TextBlock Text="• At least one uppercase letter" 
                                               FontSize="11" 
                                               Foreground="Gray"/>
                                    <TextBlock Text="• At least one lowercase letter" 
                                               FontSize="11" 
                                               Foreground="Gray"/>
                                    <TextBlock Text="• At least one number" 
                                               FontSize="11" 
                                               Foreground="Gray"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </StackPanel>

                </StackPanel>
            </ScrollViewer>

            <!-- Footer -->
            <Border Grid.Row="2"
                    Background="{StaticResource GradientSecondary}"
                    CornerRadius="0,0,10,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="1"
                                Orientation="Horizontal"
                                VerticalAlignment="Center"
                                Margin="0,0,20,0">

                        <Button Style="{StaticResource Control_Button}"
                                Command="{Binding CreateUserCommand}"
                                Margin="0,0,10,0"
                                Padding="20,10"
                                Height="40"
                                MinWidth="120"
                                Background="{StaticResource SuccessBrush}"
                                BorderThickness="0">
                            <StackPanel Orientation="Horizontal">
                                <icon:IconImage Icon="UserPlus" Width="16" Height="16" Margin="0,0,8,0" Foreground="White"/>
                                <TextBlock Text="Create User" Foreground="White" FontSize="14" FontWeight="Medium"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource Control_Button}"
                                Click="Close_Button_Click"
                                Padding="20,10"
                                Height="40"
                                MinWidth="100"
                                Background="Transparent"
                                BorderThickness="1"
                                BorderBrush="{StaticResource BorderColor}">
                            <StackPanel Orientation="Horizontal">
                                <icon:IconImage Icon="Times" Width="16" Height="16" Margin="0,0,8,0" Foreground="{StaticResource FontDark}"/>
                                <TextBlock Text="Cancel" Foreground="{StaticResource FontDark}" FontSize="14" FontWeight="Medium"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
