<UserControl x:Class="erp_system.view.Sales_View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:erp_system.view"
             xmlns:view_model="clr-namespace:erp_system.view_model"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1200">
    <UserControl.DataContext>
        <view_model:Sales_View_Model />
    </UserControl.DataContext>
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="140"/>
            <RowDefinition Height="Auto" MinHeight="250"/>
            <RowDefinition Height="Auto" MinHeight="200"/>
            <RowDefinition Height="*" MinHeight="200"/>
        </Grid.RowDefinitions>

        <!-- Top Summary Cards -->
        <Grid Grid.Row="0" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Total Sales -->
            <Border Grid.Column="0" CornerRadius="10" BorderBrush="#E0E0E0" BorderThickness="1" Padding="15" Margin="0,0,8,0" 
                    Background="White" MinHeight="100">
                <StackPanel VerticalAlignment="Center">
                    <DockPanel Margin="0,0,0,6">
                        <TextBlock Text="Total Sales" FontWeight="Bold" FontSize="14" DockPanel.Dock="Left"/>
                        <TextBlock Text="📈" FontSize="16" DockPanel.Dock="Right" Foreground="#4CAF50"/>
                    </DockPanel>
                    <TextBlock Text="{Binding SalesSummary[TotalSales], StringFormat=₱{0:N2}}" FontSize="18" FontWeight="Bold" Margin="0,0,0,4"/>
                    <TextBlock FontSize="10" Foreground="#666">
                        <TextBlock.Text>
                            <MultiBinding StringFormat="{}{0} transactions">
                                <Binding Path="SalesSummary[TotalTransactions]"/>
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                </StackPanel>
            </Border>

            <!-- This Month -->
            <Border Grid.Column="1" CornerRadius="10" BorderBrush="#E0E0E0" BorderThickness="1" Padding="15" Margin="4,0" 
                    Background="White" MinHeight="100">
                <StackPanel VerticalAlignment="Center">
                    <DockPanel Margin="0,0,0,6">
                        <TextBlock Text="This Month" FontWeight="Bold" FontSize="14" DockPanel.Dock="Left"/>
                        <TextBlock Text="📅" FontSize="16" DockPanel.Dock="Right" Foreground="#2196F3"/>
                    </DockPanel>
                    <TextBlock Text="{Binding SalesSummary[ThisMonthSales], StringFormat=₱{0:N2}}" FontSize="18" FontWeight="Bold" Margin="0,0,0,4"/>
                    <TextBlock FontSize="10" Foreground="#666">
                        <TextBlock.Text>
                            <MultiBinding StringFormat="{}{0} sales">
                                <Binding Path="SalesSummary[ThisMonthTransactions]"/>
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                </StackPanel>
            </Border>

            <!-- Top Performer -->
            <Border Grid.Column="2" CornerRadius="10" BorderBrush="#E0E0E0" BorderThickness="1" Padding="15" Margin="8,0,0,0" 
                    Background="White" MinHeight="100">
                <StackPanel VerticalAlignment="Center">
                    <DockPanel Margin="0,0,0,6">
                        <TextBlock Text="Top Performer" FontWeight="Bold" FontSize="14" DockPanel.Dock="Left"/>
                        <TextBlock Text="🏆" FontSize="16" DockPanel.Dock="Right" Foreground="#9C27B0"/>
                    </DockPanel>
                    <TextBlock Text="{Binding TopPerformer}" FontSize="14" FontWeight="Bold" Margin="0,0,0,4" TextTrimming="CharacterEllipsis"/>
                    <TextBlock Text="{Binding TopPerformerSales, StringFormat=₱{0:N2}}" FontSize="10" Foreground="#666"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Sales Analytics & Performance -->
        <Border Grid.Row="1" CornerRadius="10" BorderBrush="#eee" BorderThickness="1" Padding="20" Background="White" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="Sales Analytics &amp; Performance" FontWeight="Bold" FontSize="18" Margin="0,0,0,20"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Top Employees by Sales -->
                    <Border Grid.Column="0" CornerRadius="8" BorderBrush="#E0E0E0" BorderThickness="1" Padding="12" Margin="0,0,8,0" 
                            MinHeight="200" Background="White">
                        <StackPanel>
                            <TextBlock Text="🏆 Top Performers" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                            <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="140">
                                <ItemsControl ItemsSource="{Binding TopPerformers}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#F8F9FA" CornerRadius="4" Padding="8" Margin="0,0,0,4">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Grid.Column="0" Text="{Binding Rank}" FontWeight="Bold" FontSize="11" 
                                                              Width="18" VerticalAlignment="Center" Foreground="#666"/>
                                                    <TextBlock Grid.Column="1" Text="{Binding EmployeeName}" VerticalAlignment="Center" 
                                                              Margin="6,0" FontSize="11" TextTrimming="CharacterEllipsis"/>
                                                    <TextBlock Grid.Column="2" Text="{Binding TotalSales, StringFormat=₱{0:N0}}" 
                                                              FontWeight="SemiBold" VerticalAlignment="Center" FontSize="11" Foreground="#2E7D32"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </StackPanel>
                    </Border>

                    <!-- Sales Department Performance -->
                    <Border Grid.Column="1" CornerRadius="8" BorderBrush="#E0E0E0" BorderThickness="1" Padding="12" Margin="4,0" 
                            MinHeight="200" Background="White">
                        <StackPanel>
                            <TextBlock Text="🏢 Sales Department" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                            <StackPanel>
                                <Border Background="#E3F2FD" CornerRadius="5" Padding="10" Margin="0,0,0,6">
                                    <StackPanel>
                                        <TextBlock Text="Total Sales" FontSize="11" FontWeight="SemiBold" Margin="0,0,0,3"/>
                                        <TextBlock Text="{Binding SalesSummary[TotalSales], StringFormat=₱{0:N2}}" 
                                                   FontSize="14" FontWeight="Bold" Foreground="#1976D2"/>
                                    </StackPanel>
                                </Border>
                                <Border Background="#F8F9FA" CornerRadius="5" Padding="10" Margin="0,0,0,6">
                                    <StackPanel>
                                        <TextBlock Text="This Month" FontSize="11" FontWeight="SemiBold" Margin="0,0,0,3"/>
                                        <TextBlock Text="{Binding SalesSummary[ThisMonthSales], StringFormat=₱{0:N2}}" 
                                                   FontSize="12" FontWeight="Bold" Foreground="#2E7D32"/>
                                    </StackPanel>
                                </Border>
                                <Border Background="#FFF3E0" CornerRadius="5" Padding="10">
                                    <StackPanel>
                                        <TextBlock Text="Transactions" FontSize="11" FontWeight="SemiBold" Margin="0,0,0,3"/>
                                        <TextBlock Text="{Binding SalesSummary[TotalTransactions]}" 
                                                   FontSize="12" FontWeight="Bold" Foreground="#F57C00"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Monthly Trends -->
                    <Border Grid.Column="2" CornerRadius="8" BorderBrush="#E0E0E0" BorderThickness="1" Padding="12" Margin="8,0,0,0" 
                            MinHeight="200" Background="White">
                        <StackPanel>
                            <TextBlock Text="📊 Month" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                            <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="140">
                                <ItemsControl ItemsSource="{Binding MonthlyTrends}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#F8F9FA" CornerRadius="4" Padding="8" Margin="0,0,0,4">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Grid.Column="0" Text="{Binding Month}" VerticalAlignment="Center" 
                                                              FontSize="11" TextTrimming="CharacterEllipsis"/>
                                                    <TextBlock Grid.Column="1" Text="{Binding Amount, StringFormat=₱{0:N0}}" 
                                                              FontWeight="SemiBold" VerticalAlignment="Center" FontSize="11" Foreground="#F57C00"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Sales Management Section -->
        <Border Grid.Row="2" CornerRadius="10" BorderBrush="#eee" BorderThickness="1" Padding="20" Background="White" Margin="0,0,0,15">
            <StackPanel>
                <!-- Header with Actions -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Sales Management" FontWeight="Bold" FontSize="18" Grid.Column="0" VerticalAlignment="Center"/>
                    <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Right">
                        <Button Content="➕ Add Sale" Command="{Binding AddSale_Command}" 
                                Padding="12,6" Background="#4CAF50" Foreground="White" BorderThickness="0" Margin="0,0,8,0"/>
                        <Button Content="🔄 Refresh" Command="{Binding Refresh_Command}" 
                                Padding="12,6" Background="#E5E7EB" BorderThickness="0" Margin="0,0,8,0"/>
                        <Button Content="📊 Analytics" Command="{Binding ShowAnalytics_Command}" 
                                Padding="12,6" Background="#2196F3" Foreground="White" BorderThickness="0"/>
                    </StackPanel>
                </Grid>

                <!-- Filter Controls -->
                <Border Background="#F8F9FA" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- First Row: Date Range, Search Employee -->
                        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,12">
                            <!-- Date Range Filter -->
                            <StackPanel Margin="0,0,20,0">
                                <TextBlock Text="Date Range" FontSize="12" FontWeight="SemiBold" Margin="0,0,0,6"/>
                                <StackPanel Orientation="Horizontal">
                                    <DatePicker SelectedDate="{Binding FilterStartDate}" Width="100" Margin="0,0,6,0"/>
                                    <DatePicker SelectedDate="{Binding FilterEndDate}" Width="100"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- Search Employee -->
                            <StackPanel>
                                <TextBlock Text="Search Employee" FontSize="12" FontWeight="SemiBold" Margin="0,0,0,6"/>
                                <StackPanel Orientation="Horizontal">
                                    <TextBox Text="{Binding SearchText}" Width="200" Margin="0,0,6,0" 
                                             VerticalContentAlignment="Center" Padding="6,4"/>
                                    <Button Content="🔍" Command="{Binding Search_Command}" 
                                            Padding="6,4" Background="#FF9800" Foreground="White" BorderThickness="0"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>

                        <!-- Second Row: Quick Filters -->
                        <StackPanel Orientation="Horizontal" Grid.Row="1">
                            <TextBlock Text="Quick Filters:" FontSize="12" FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <Button Content="Today" Command="{Binding FilterToday_Command}" 
                                    Padding="8,4" Background="#E3F2FD" BorderThickness="1" BorderBrush="#2196F3" Margin="0,0,6,0"/>
                            <Button Content="This Week" Command="{Binding FilterThisWeek_Command}" 
                                    Padding="8,4" Background="#E3F2FD" BorderThickness="1" BorderBrush="#2196F3" Margin="0,0,6,0"/>
                            <Button Content="This Month" Command="{Binding FilterThisMonth_Command}" 
                                    Padding="8,4" Background="#E3F2FD" BorderThickness="1" BorderBrush="#2196F3" Margin="0,0,6,0"/>
                            <Button Content="Clear" Command="{Binding ClearFilters_Command}" 
                                    Padding="8,4" Background="#9E9E9E" Foreground="White" BorderThickness="0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Sales Data Grid -->
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" MaxHeight="450">
                    <DataGrid ItemsSource="{Binding FilteredSales}" AutoGenerateColumns="False" CanUserAddRows="False" 
                              GridLinesVisibility="Horizontal" RowHeaderWidth="0" CanUserSortColumns="True"
                              AlternatingRowBackground="#F8F9FA" RowHeight="40" MinWidth="800">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Date" Binding="{Binding SaleDate, StringFormat=yyyy-MM-dd}" Width="100" CanUserSort="True"/>
                            <DataGridTextColumn Header="Amount" Binding="{Binding Amount, StringFormat=₱{0:N2}}" Width="120" CanUserSort="True"/>
                            <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="350"/>
                            <DataGridTextColumn Header="Employee" Binding="{Binding EmployeeName}" Width="150"/>
                            <DataGridTemplateColumn Header="Actions" Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button Content="✏️" Command="{Binding DataContext.EditSale_Command, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                    CommandParameter="{Binding}" Padding="6" Background="Transparent" BorderThickness="0" Margin="0,0,6,0"/>
                                            <Button Content="🗑️" Command="{Binding DataContext.DeleteSale_Command, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                    CommandParameter="{Binding}" Padding="6" Background="Transparent" BorderThickness="0"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </ScrollViewer>

                <!-- Summary Footer -->
                <Border Background="#E8F5E8" CornerRadius="5" Padding="10" Margin="0,10,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="{Binding FilteredSalesCount, StringFormat=Total Records: {0}}" FontWeight="SemiBold"/>
                        <TextBlock Grid.Column="1" Text="{Binding FilteredTotalAmount, StringFormat=Total Amount: ₱{0:N2}}" FontWeight="SemiBold"/>
                        <TextBlock Grid.Column="2" Text="{Binding FilteredAverageAmount, StringFormat=Average: ₱{0:N2}}" FontWeight="SemiBold"/>
                        <TextBlock Grid.Column="3" Text="{Binding FilteredDateRange}" FontWeight="SemiBold"/>
                    </Grid>
                </Border>
            </StackPanel>
        </Border>

    </Grid>
    </ScrollViewer>
</UserControl>
