<UserControl x:Class="erp_system.view.Dashboard_View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:erp_system.view"
             xmlns:view_model="clr-namespace:erp_system.view_model"
             xmlns:Stat_View="clr-namespace:erp_system.custom_controls"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <local:AmountToHeightConverter x:Key="AmountToHeightConverter"/>
        <local:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" Background="#EEEEFA">
        <Border CornerRadius="16" Background="White" Margin="24" Padding="24">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Opacity="0.08" ShadowDepth="0" BlurRadius="20"/>
            </Border.Effect>
            <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Header with Quick Actions -->
                <RowDefinition Height="Auto"/>
                <!-- Top Summary -->
                <RowDefinition Height="Auto"/>
                <!-- Sales + Recent Activity -->
                <RowDefinition Height="Auto"/>
                <!-- Performance Metrics -->
            </Grid.RowDefinitions>

            <!-- Dashboard Header with Quick Actions -->
            <Grid Grid.Row="0" Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.5*"/>
                    <ColumnDefinition Width="1.5*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Dashboard Title Section -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Dashboard" FontSize="32" FontWeight="Bold" Foreground="#1F2937" Margin="0,0,0,4"/>
                    <TextBlock Text="Welcome back! Here's what's happening with your business today." 
                               FontSize="14" Foreground="#6B7280"/>
                </StackPanel>
                
                <!-- Quick Actions Section -->
                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                    <TextBlock Text="🚀 Quick Actions" FontWeight="Bold" FontSize="14" Foreground="#1F2937" Margin="0,0,0,8"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1.4*"/>
                            <ColumnDefinition Width="1.4*"/>
                            <ColumnDefinition Width="1.4*"/>
                            <ColumnDefinition Width="1.4*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Sales -->
                        <Button Grid.Column="0" Command="{Binding NavigateToSalesCommand}" 
                                Background="Transparent" BorderThickness="0" Margin="0,0,3,0"
                                Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="White" CornerRadius="10" Padding="12" 
                                            BorderBrush="#E5E7EB" BorderThickness="1"
                                            Cursor="Hand">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="White"/>
                                                <Setter Property="BorderBrush" Value="#E5E7EB"/>
                                                <Setter Property="BorderThickness" Value="1"/>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#F0FDF4"/>
                                                        <Setter Property="BorderBrush" Value="#10B981"/>
                                                        <Setter Property="BorderThickness" Value="2"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <TextBlock Text="💲" FontSize="20" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                            <TextBlock Text="Sales" FontWeight="Bold" FontSize="11" 
                                                       Foreground="#1F2937" HorizontalAlignment="Center" TextWrapping="NoWrap"/>
                                        </StackPanel>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <!-- Performance -->
                        <Button Grid.Column="1" Command="{Binding NavigateToPerformanceCommand}" 
                                Background="Transparent" BorderThickness="0" Margin="3,0"
                                Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="White" CornerRadius="10" Padding="12" 
                                            BorderBrush="#E5E7EB" BorderThickness="1"
                                            Cursor="Hand">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="White"/>
                                                <Setter Property="BorderBrush" Value="#E5E7EB"/>
                                                <Setter Property="BorderThickness" Value="1"/>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#FEF3C7"/>
                                                        <Setter Property="BorderBrush" Value="#F59E0B"/>
                                                        <Setter Property="BorderThickness" Value="2"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <TextBlock Text="📈" FontSize="20" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                            <TextBlock Text="Performance" FontWeight="Bold" FontSize="11" 
                                                       Foreground="#1F2937" HorizontalAlignment="Center" TextWrapping="NoWrap"/>
                                        </StackPanel>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <!-- Payroll -->
                        <Button Grid.Column="2" Command="{Binding NavigateToPayrollCommand}" 
                                Background="Transparent" BorderThickness="0" Margin="3,0"
                                Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="White" CornerRadius="10" Padding="12" 
                                            BorderBrush="#E5E7EB" BorderThickness="1"
                                            Cursor="Hand">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="White"/>
                                                <Setter Property="BorderBrush" Value="#E5E7EB"/>
                                                <Setter Property="BorderThickness" Value="1"/>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#FEF3C7"/>
                                                        <Setter Property="BorderBrush" Value="#F59E0B"/>
                                                        <Setter Property="BorderThickness" Value="2"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <TextBlock Text="👤" FontSize="20" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                            <TextBlock Text="Payroll" FontWeight="Bold" FontSize="11" 
                                                       Foreground="#1F2937" HorizontalAlignment="Center" TextWrapping="NoWrap"/>
                                        </StackPanel>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <!-- Reports -->
                        <Button Grid.Column="3" Command="{Binding NavigateToInsightsCommand}" 
                                Background="Transparent" BorderThickness="0" Margin="3,0,0,0"
                                Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="White" CornerRadius="10" Padding="12" 
                                            BorderBrush="#E5E7EB" BorderThickness="1"
                                            Cursor="Hand">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="White"/>
                                                <Setter Property="BorderBrush" Value="#E5E7EB"/>
                                                <Setter Property="BorderThickness" Value="1"/>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#F3E8FF"/>
                                                        <Setter Property="BorderBrush" Value="#8B5CF6"/>
                                                        <Setter Property="BorderThickness" Value="2"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <TextBlock Text="📊" FontSize="20" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                            <TextBlock Text="Reports" FontWeight="Bold" FontSize="11" 
                                                       Foreground="#1F2937" HorizontalAlignment="Center" TextWrapping="NoWrap"/>
                                        </StackPanel>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                </StackPanel>
            </Grid>

            <!-- ====== SALES ANALYTICS & PERFORMANCE ====== -->
            <Border Grid.Row="1" CornerRadius="16" BorderBrush="#E5E7EB" BorderThickness="1" Padding="24" Background="White" Margin="0,0,0,24">
                <StackPanel>
                    <!-- Header with Refresh Button -->
                    <Grid Margin="0,0,0,24">
                        <TextBlock Text="📊 Sales Analytics &amp; Performance" FontWeight="Bold" FontSize="20" Foreground="#1F2937" VerticalAlignment="Center"/>
                        <Button Grid.Column="1" Command="{Binding RefreshCommand}" 
                                Content="🔄 Refresh" Width="100" Height="40"
                                Background="#E5E7EB" Foreground="#111827" FontWeight="Bold" 
                                BorderThickness="0" Cursor="Hand"
                                HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    </Grid>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Top Employees by Sales -->
                        <Border Grid.Column="0" CornerRadius="12" BorderBrush="#E5E7EB" BorderThickness="1" Padding="16" Margin="0,0,12,0" 
                                MinHeight="220" Background="White">
                            <StackPanel>
                                <TextBlock Text="🏆 Top Performers" FontWeight="Bold" FontSize="16" Foreground="#1F2937" Margin="0,0,0,16"/>
                                <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="140">
                                    <ItemsControl ItemsSource="{Binding SalesTopPerformers}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="#F8F9FA" CornerRadius="4" Padding="8" Margin="0,0,0,4">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Grid.Column="0" Text="{Binding Rank}" FontWeight="Bold" FontSize="11" 
                                                                  Width="18" VerticalAlignment="Center" Foreground="#666"/>
                                                        <TextBlock Grid.Column="1" Text="{Binding EmployeeName}" VerticalAlignment="Center" 
                                                                  Margin="6,0" FontSize="11" TextTrimming="CharacterEllipsis"/>
                                                        <TextBlock Grid.Column="2" Text="{Binding TotalSales, StringFormat=₱{0:N0}}" 
                                                                  FontWeight="SemiBold" VerticalAlignment="Center" FontSize="11" Foreground="#2E7D32"/>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </StackPanel>
                        </Border>

                        <!-- Sales Department Performance -->
                        <Border Grid.Column="1" CornerRadius="12" BorderBrush="#E5E7EB" BorderThickness="1" Padding="16" Margin="6,0" 
                                MinHeight="220" Background="White">
                            <StackPanel>
                                <TextBlock Text="🏢 Sales Department" FontWeight="Bold" FontSize="16" Foreground="#1F2937" Margin="0,0,0,16"/>
                                <StackPanel>
                                    <Border Background="#E3F2FD" CornerRadius="5" Padding="10" Margin="0,0,0,6">
                                        <StackPanel>
                                            <TextBlock Text="Total Sales" FontSize="11" FontWeight="SemiBold" Margin="0,0,0,3"/>
                                            <TextBlock Text="{Binding SalesSummary[TotalSales], StringFormat=₱{0:N2}}" 
                                                       FontSize="14" FontWeight="Bold" Foreground="#1976D2"/>
                                        </StackPanel>
                                    </Border>
                                    <Border Background="#F8F9FA" CornerRadius="5" Padding="10" Margin="0,0,0,6">
                                        <StackPanel>
                                            <TextBlock Text="This Month" FontSize="11" FontWeight="SemiBold" Margin="0,0,0,3"/>
                                            <TextBlock Text="{Binding SalesSummary[ThisMonthSales], StringFormat=₱{0:N2}}" 
                                                       FontSize="12" FontWeight="Bold" Foreground="#2E7D32"/>
                                        </StackPanel>
                                    </Border>
                                    <Border Background="#FFF3E0" CornerRadius="5" Padding="10">
                                        <StackPanel>
                                            <TextBlock Text="Transactions" FontSize="11" FontWeight="SemiBold" Margin="0,0,0,3"/>
                                            <TextBlock Text="{Binding SalesSummary[TotalTransactions]}" 
                                                       FontSize="12" FontWeight="Bold" Foreground="#F57C00"/>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Monthly Trends -->
                        <Border Grid.Column="2" CornerRadius="12" BorderBrush="#E5E7EB" BorderThickness="1" Padding="16" Margin="12,0,0,0" 
                                MinHeight="220" Background="White">
                            <StackPanel>
                                <TextBlock Text="📈 Monthly Trends" FontWeight="Bold" FontSize="16" Foreground="#1F2937" Margin="0,0,0,16"/>
                                <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="140">
                                    <ItemsControl ItemsSource="{Binding MonthlyTrends}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="#F8F9FA" CornerRadius="4" Padding="8" Margin="0,0,0,4">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Grid.Column="0" Text="{Binding Month}" VerticalAlignment="Center" 
                                                                  FontSize="11" TextTrimming="CharacterEllipsis"/>
                                                        <TextBlock Grid.Column="1" Text="{Binding Amount, StringFormat=₱{0:N0}}" 
                                                                  FontWeight="SemiBold" VerticalAlignment="Center" FontSize="11" Foreground="#F57C00"/>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </StackPanel>
                        </Border>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- ====== MIDDLE SECTION ====== -->
            <Grid Grid.Row="2" Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Monthly Sales Performance -->
                <Border Background="White" CornerRadius="16" Padding="24" Margin="0,0,12,0" BorderBrush="#E5E7EB" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="📊 Monthly Sales Performance" FontWeight="Bold" FontSize="18" Foreground="#1F2937" Margin="0,0,0,16"/>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Sales Summary -->
                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBlock Text="{Binding MonthlySales, StringFormat=₱{0:N0}}" 
                                           FontSize="24" FontWeight="Bold" Foreground="#059669" Margin="0,0,20,0"/>
                                <TextBlock Text="This Month" FontSize="12" Foreground="#666" VerticalAlignment="Bottom" Margin="0,0,0,5"/>
                            </StackPanel>
                            
                            <!-- Line Chart -->
                            <Border Grid.Row="1" Background="#F9FAFB" CornerRadius="8" Padding="20" MinHeight="120">
                                <Grid>
                                    <!-- Chart Content -->
                                    <lvc:CartesianChart Series="{Binding MonthlySalesSeries}" Height="120">
                                        <lvc:CartesianChart.AxisX>
                                            <lvc:Axis Labels="{Binding MonthlySalesLabels}" FontSize="10"/>
                                        </lvc:CartesianChart.AxisX>
                                        <lvc:CartesianChart.AxisY>
                                            <lvc:Axis FontSize="10"/>
                                        </lvc:CartesianChart.AxisY>
                                    </lvc:CartesianChart>
                                    
                                    <!-- No Data Message -->
                                    <TextBlock Text="No sales data available for the last 6 months" 
                                               FontSize="14" 
                                               Foreground="#666" 
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center"
                                               Visibility="{Binding MonthlySalesSeries.Count, Converter={StaticResource CountToVisibilityConverter}}"/>
                                </Grid>
                            </Border>
                            
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Recent Activity -->
                <Border Grid.Column="1" Background="White" CornerRadius="16" Padding="24" Margin="12,0,0,0" BorderBrush="#E5E7EB" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="🔔 Recent Activity" FontWeight="Bold" FontSize="18" Foreground="#1F2937" Margin="0,0,0,16"/>
                        <ScrollViewer Height="200" VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding RecentActivities}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Margin="0,5">
                                            <TextBlock Text="{Binding Description}" 
                                                       Foreground="{Binding Color}" 
                                                       FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding Details}" 
                                                       FontSize="12" 
                                                       Foreground="#666"/>
                                            <TextBlock Text="{Binding Date, StringFormat='{}{0:MMM dd, yyyy}'}" 
                                                       FontSize="10" 
                                                       Foreground="#999"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- ====== PERFORMANCE METRICS ====== -->
            <Grid Grid.Row="3" Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Performance Statistics -->
                <Border Grid.Column="0" Background="White" CornerRadius="12" Padding="16" Margin="0,0,12,0" BorderBrush="#E5E7EB" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="📊 Performance Statistics" FontWeight="Bold" FontSize="18" Foreground="#1F2937" Margin="0,0,0,10"/>
                        
                        <!-- Total Evaluations - Main Metric -->
                        <Border Background="#F0F9FF" CornerRadius="8" Padding="10" Margin="0,0,0,8">
                            <StackPanel>
                                <TextBlock Text="{Binding TotalEvaluations}" 
                                           FontSize="28" FontWeight="Bold" Foreground="#3B82F6" HorizontalAlignment="Center"/>
                                <TextBlock Text="Total Evaluations" FontSize="13" Foreground="#64748B" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Performance Breakdown -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- High Performers -->
                            <Border Grid.Column="0" Background="#F0FDF4" CornerRadius="6" Padding="8" Margin="0,0,3,0">
                                <StackPanel>
                                    <TextBlock Text="{Binding HighPerformers}" FontSize="16" FontWeight="Bold" Foreground="#059669" HorizontalAlignment="Center"/>
                                    <TextBlock Text="High" FontSize="11" Foreground="#64748B" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                                    <TextBlock Text="≥ 4.0" FontSize="9" Foreground="#9CA3AF" HorizontalAlignment="Center" Margin="0,1,0,0"/>
                                </StackPanel>
                            </Border>
                            
                            <!-- Average Performers -->
                            <Border Grid.Column="1" Background="#FFFBEB" CornerRadius="6" Padding="8" Margin="3,0,3,0">
                                <StackPanel>
                                    <TextBlock Text="{Binding AveragePerformers}" FontSize="16" FontWeight="Bold" Foreground="#F59E0B" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Average" FontSize="11" Foreground="#64748B" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                                    <TextBlock Text="2.5-3.9" FontSize="9" Foreground="#9CA3AF" HorizontalAlignment="Center" Margin="0,1,0,0"/>
                                </StackPanel>
                            </Border>
                            
                            <!-- Low Performers -->
                            <Border Grid.Column="2" Background="#FEF2F2" CornerRadius="6" Padding="8" Margin="3,0,0,0">
                                <StackPanel>
                                    <TextBlock Text="{Binding LowPerformers}" FontSize="16" FontWeight="Bold" Foreground="#DC2626" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Low" FontSize="11" Foreground="#64748B" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                                    <TextBlock Text="1.0-2.4" FontSize="9" Foreground="#9CA3AF" HorizontalAlignment="Center" Margin="0,1,0,0"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                        
                        <!-- Performance Summary -->
                        <Border Background="#F8FAFC" CornerRadius="8" Padding="10" Margin="0,8,0,0" BorderBrush="#E2E8F0" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="{Binding HighPerformanceRate, StringFormat={}{0:F0}%}" FontSize="24" FontWeight="Bold" Foreground="#059669" HorizontalAlignment="Center"/>
                                <TextBlock Text="High Performance Rate" FontSize="12" Foreground="#64748B" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Performance Insights -->
                        <Border Background="#F0F9FF" CornerRadius="6" Padding="8" Margin="0,6,0,0" BorderBrush="#BFDBFE" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="📈 Performance Insights" FontSize="12" FontWeight="SemiBold" Foreground="#1E40AF" HorizontalAlignment="Center" Margin="0,0,0,4"/>
                                <TextBlock Text="High performance rate shows the percentage of employees meeting or exceeding performance expectations." 
                                           TextWrapping="Wrap" FontSize="11" Foreground="#475569" HorizontalAlignment="Center" TextAlignment="Center" LineHeight="14"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Department Performance -->
                <Border Grid.Column="1" Background="White" CornerRadius="12" Padding="16" Margin="12,0,0,0" BorderBrush="#E5E7EB" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="🏢 Department Performance" FontWeight="Bold" FontSize="18" Foreground="#1F2937" Margin="0,0,0,10"/>
                        
                        <!-- Header Row -->
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Rank" FontWeight="SemiBold" FontSize="12" Foreground="#64748B" Width="30"/>
                            <TextBlock Grid.Column="1" Text="Department" FontWeight="SemiBold" FontSize="12" Foreground="#64748B" Margin="8,0,0,0"/>
                            <TextBlock Grid.Column="2" Text="Score" FontWeight="SemiBold" FontSize="12" Foreground="#64748B"/>
                        </Grid>
                        
                        <!-- Department List -->
                        <ItemsControl ItemsSource="{Binding TopDepartments}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#F8FAFC" CornerRadius="6" Padding="8" Margin="0,0,0,6" BorderBrush="#E2E8F0" BorderThickness="1">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <!-- Rank Badge -->
                                            <Border Grid.Column="0" Background="#3B82F6" CornerRadius="12" Width="24" Height="24" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Rank}" FontWeight="Bold" FontSize="11" 
                                                          Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            
                                            <!-- Department Name -->
                                            <TextBlock Grid.Column="1" Text="{Binding DepartmentName}" VerticalAlignment="Center" 
                                                      Margin="10,0" FontSize="13" FontWeight="Medium" TextTrimming="CharacterEllipsis" Foreground="#1F2937"/>
                                            
                                            <!-- Score with Color Coding -->
                                            <Border Grid.Column="2" Background="#F0FDF4" CornerRadius="4" Padding="6,2" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding AverageScore, StringFormat={}{0:F1}}" 
                                                          FontWeight="Bold" FontSize="12" Foreground="#059669" HorizontalAlignment="Center"/>
                                            </Border>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </Grid>

        </Grid>
        </Border>
    </ScrollViewer>
</UserControl>
