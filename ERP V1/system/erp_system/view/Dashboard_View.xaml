<UserControl x:Class="erp_system.view.Dashboard_View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:erp_system.view"
             xmlns:view_model="clr-namespace:erp_system.view_model"
             xmlns:Stat_View="clr-namespace:erp_system.custom_controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <local:AmountToHeightConverter x:Key="AmountToHeightConverter"/>
    </UserControl.Resources>
    <UserControl.DataContext>
        <view_model:Dashboard_View_Model />
    </UserControl.DataContext>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Header -->
                <RowDefinition Height="Auto"/>
                <!-- Top Summary -->
                <RowDefinition Height="*"/>
                <!-- Sales + Recent Activity -->
                <RowDefinition Height="Auto"/>
                <!-- Performance Metrics -->
                <RowDefinition Height="Auto"/>
                <!-- Quick Actions -->
            </Grid.RowDefinitions>

            <!-- Dashboard Header -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Dashboard" FontSize="28" FontWeight="Bold" VerticalAlignment="Center"/>
                <Button Grid.Column="1" Command="{Binding RefreshCommand}"
                        Background="#059669" Foreground="White" 
                        Padding="15,8" BorderThickness="0"
                        FontWeight="SemiBold">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="6" 
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <TextBlock Text="🔄 Refresh"/>
                </Button>
            </Grid>

            <!-- ====== TOP SUMMARY CARDS ====== -->
            <UniformGrid Grid.Row="1" Columns="4" Margin="0,0,0,20" HorizontalAlignment="Stretch" VerticalAlignment="Top" 
                         IsItemsHost="False">
                <!-- Total Employees -->
                <Border CornerRadius="8" Background="White" Padding="20" Margin="10" BorderBrush="#EEE" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Total Employees" FontWeight="SemiBold" Foreground="#555"/>
                        <TextBlock Text="{Binding QuickStats[0].Value}" FontSize="20" FontWeight="Bold"/>
                        <Border Background="#FFD84D" Width="40" Height="40" CornerRadius="8" HorizontalAlignment="Right">
                            <TextBlock Text="👥" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Monthly Sales -->
                <Border CornerRadius="8" Background="White" Padding="20" Margin="10" BorderBrush="#EEE" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Monthly Sales" FontWeight="SemiBold" Foreground="#555"/>
                        <TextBlock Text="{Binding QuickStats[1].Value, StringFormat=₱{0}}" FontSize="20" FontWeight="Bold"/>
                        <Border Background="#A7F3D0" Width="40" Height="40" CornerRadius="8" HorizontalAlignment="Right">
                            <TextBlock Text="💲" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Pending Leaves -->
                <Border CornerRadius="8" Background="White" Padding="20" Margin="10" BorderBrush="#EEE" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Pending Leaves" FontWeight="SemiBold" Foreground="#555"/>
                        <TextBlock Text="{Binding QuickStats[2].Value}" FontSize="20" FontWeight="Bold"/>
                        <Border Background="#FCD34D" Width="40" Height="40" CornerRadius="8" HorizontalAlignment="Right">
                            <TextBlock Text="📅" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Active Consultants -->
                <Border CornerRadius="8" Background="White" Padding="20" Margin="10" BorderBrush="#EEE" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Active Consultants" FontWeight="SemiBold" Foreground="#555"/>
                        <TextBlock Text="0" FontSize="20" FontWeight="Bold"/>
                        <Border Background="#E9D5FF" Width="40" Height="40" CornerRadius="8" HorizontalAlignment="Right">
                            <TextBlock Text="👤" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                    </StackPanel>
                </Border>
            </UniformGrid>

            <!-- ====== MIDDLE SECTION ====== -->
            <Grid Grid.Row="2" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Monthly Sales Performance -->
                <Border Background="White" CornerRadius="8" Padding="20" Margin="10" BorderBrush="#EEE" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Monthly Sales Performance" FontWeight="Bold" Margin="0,0,0,10"/>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Sales Summary -->
                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBlock Text="{Binding MonthlySales, StringFormat=₱{0:N0}}" 
                                           FontSize="24" FontWeight="Bold" Foreground="#059669" Margin="0,0,20,0"/>
                                <TextBlock Text="This Month" FontSize="12" Foreground="#666" VerticalAlignment="Bottom" Margin="0,0,0,5"/>
                            </StackPanel>
                            
                            <!-- Simple Bar Chart -->
                            <Border Grid.Row="1" Background="#F9FAFB" CornerRadius="8" Padding="20" MinHeight="120">
                                <ItemsControl ItemsSource="{Binding MonthlyTrends}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Margin="5" VerticalAlignment="Bottom">
                                                <Border Background="#3B82F6" 
                                                        Width="30" 
                                                        Height="{Binding Amount, Converter={StaticResource AmountToHeightConverter}}"
                                                        CornerRadius="4,4,0,0"
                                                        VerticalAlignment="Bottom"/>
                                                <TextBlock Text="{Binding Month}" 
                                                           FontSize="10" 
                                                           HorizontalAlignment="Center" 
                                                           Margin="0,5,0,0"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Border>
                            
                            <!-- Top Performer -->
                            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0">
                                <TextBlock Text="🏆 Top Performer: " FontWeight="SemiBold" Foreground="#666"/>
                                <TextBlock Text="{Binding TopPerformerName}" FontWeight="Bold" Foreground="#059669"/>
                                <TextBlock Text="{Binding TopPerformerSales, StringFormat= (₱{0:N0})}" FontSize="12" Foreground="#666" Margin="5,0,0,0"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Recent Activity -->
                <Border Grid.Column="1" Background="White" CornerRadius="8" Padding="20" Margin="10" BorderBrush="#EEE" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Recent Activity" FontWeight="Bold" Margin="0,0,0,10"/>
                        <ScrollViewer Height="200" VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding RecentActivities}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Margin="0,5">
                                            <TextBlock Text="{Binding Description}" 
                                                       Foreground="{Binding Color}" 
                                                       FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding Details}" 
                                                       FontSize="12" 
                                                       Foreground="#666"/>
                                            <TextBlock Text="{Binding Date, StringFormat='{}{0:MMM dd, yyyy}'}" 
                                                       FontSize="10" 
                                                       Foreground="#999"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- ====== PERFORMANCE METRICS ====== -->
            <Grid Grid.Row="3" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Performance Overview -->
                <Border Grid.Column="0" Background="White" CornerRadius="8" Padding="20" Margin="10" BorderBrush="#EEE" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Performance Overview" FontWeight="Bold" Margin="0,0,0,10"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="{Binding AveragePerformanceScore, StringFormat={}{0:F1}}" 
                                       FontSize="20" FontWeight="Bold" Foreground="#059669"/>
                            <TextBlock Text="/5.0" FontSize="12" Foreground="#666" VerticalAlignment="Bottom" Margin="0,0,0,5"/>
                        </StackPanel>
                        <TextBlock Text="Average Score" FontSize="12" Foreground="#666"/>
                        <TextBlock Text="Based on recent reviews" FontSize="10" Foreground="#999" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Top Performers -->
                <Border Grid.Column="1" Background="White" CornerRadius="8" Padding="20" Margin="10" BorderBrush="#EEE" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Top Performers" FontWeight="Bold" Margin="0,0,0,10"/>
                        <ScrollViewer Height="120" VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding TopPerformers}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Margin="0,2">
                                            <TextBlock Text="{Binding Rank}" FontWeight="Bold" Width="20" Foreground="#059669"/>
                                            <TextBlock Text="{Binding EmployeeName}" FontSize="12" Margin="5,0,0,0"/>
                                            <TextBlock Text="{Binding TotalSales, StringFormat=₱{0:N0}}" 
                                                       FontSize="10" Foreground="#666" 
                                                       HorizontalAlignment="Right" Margin="5,0,0,0"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </StackPanel>
                </Border>

                <!-- Leave Status -->
                <Border Grid.Column="2" Background="White" CornerRadius="8" Padding="20" Margin="10" BorderBrush="#EEE" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Leave Status" FontWeight="Bold" Margin="0,0,0,10"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="{Binding PendingLeaves}" 
                                       FontSize="20" FontWeight="Bold" Foreground="#F59E0B"/>
                            <TextBlock Text=" pending" FontSize="12" Foreground="#666" VerticalAlignment="Bottom" Margin="0,0,0,5"/>
                        </StackPanel>
                        <TextBlock Text="Leave requests" FontSize="12" Foreground="#666"/>
                        <TextBlock Text="Awaiting approval" FontSize="10" Foreground="#999" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- ====== QUICK ACTIONS ====== -->
            <UniformGrid Grid.Row="4" Columns="4" HorizontalAlignment="Stretch" VerticalAlignment="Top">
                <!-- Add Employee -->
                <Button Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" 
                        Background="Transparent" BorderThickness="0" 
                        Command="{Binding NavigateToEmployeesCommand}"
                        Margin="10">
                    <Border CornerRadius="8" Background="White" Padding="20" BorderBrush="#EEE" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="👥" FontSize="20"/>
                            <TextBlock Text="Add Employee" FontWeight="Bold"/>
                            <TextBlock Text="Create new employee profile" FontSize="12" Foreground="#777"/>
                        </StackPanel>
                    </Border>
                </Button>

                <!-- Record Sale -->
                <Button Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" 
                        Background="Transparent" BorderThickness="0" 
                        Command="{Binding NavigateToSalesCommand}"
                        Margin="10">
                    <Border CornerRadius="8" Background="White" Padding="20" BorderBrush="#EEE" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="💲" FontSize="20"/>
                            <TextBlock Text="Record Sale" FontWeight="Bold"/>
                            <TextBlock Text="Add new perfume sale" FontSize="12" Foreground="#777"/>
                        </StackPanel>
                    </Border>
                </Button>

                <!-- Process Payroll -->
                <Button Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" 
                        Background="Transparent" BorderThickness="0" 
                        Command="{Binding NavigateToPayrollCommand}"
                        Margin="10">
                    <Border CornerRadius="8" Background="White" Padding="20" BorderBrush="#EEE" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="👤" FontSize="20"/>
                            <TextBlock Text="Process Payroll" FontWeight="Bold"/>
                            <TextBlock Text="Calculate monthly payroll" FontSize="12" Foreground="#777"/>
                        </StackPanel>
                    </Border>
                </Button>

                <!-- Generate Report -->
                <Button Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" 
                        Background="Transparent" BorderThickness="0" 
                        Command="{Binding NavigateToInsightsCommand}"
                        Margin="10">
                    <Border CornerRadius="8" Background="White" Padding="20" BorderBrush="#EEE" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="📅" FontSize="20"/>
                            <TextBlock Text="Generate Report" FontWeight="Bold"/>
                            <TextBlock Text="Export business reports" FontSize="12" Foreground="#777"/>
                        </StackPanel>
                    </Border>
                </Button>
            </UniformGrid>
        </Grid>
    </ScrollViewer>
</UserControl>
