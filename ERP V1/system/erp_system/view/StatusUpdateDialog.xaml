<Window x:Class="erp_system.view.StatusUpdateDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Update Employee Status" Height="450" Width="500"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="#F8FAFC">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Update Employee Status" FontSize="20" FontWeight="Bold" 
                       Foreground="#1E293B" HorizontalAlignment="Center"/>
            <TextBlock Text="{Binding Employee.FullName, StringFormat='Employee: {0}'}" 
                       FontSize="14" Foreground="#64748B" HorizontalAlignment="Center" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Current Status -->
        <Border Grid.Row="1" Background="#F1F5F9" CornerRadius="8" Padding="15" Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="Current Status:" FontWeight="SemiBold" Foreground="#475569" FontSize="12"/>
                <TextBlock Text="{Binding Employee.Status}" FontSize="16" FontWeight="Medium" 
                           Foreground="#1E293B" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Status Options -->
        <StackPanel Grid.Row="2" Margin="0,0,0,20">
            <TextBlock Text="Select New Status:" FontWeight="SemiBold" Foreground="#475569" 
                       FontSize="14" Margin="0,0,0,15"/>
            
            <StackPanel>
                <!-- Active -->
                <RadioButton Content="Active" IsChecked="{Binding IsActiveSelected}" 
                            FontSize="14" Margin="0,0,0,10" Padding="10,8">
                    <RadioButton.Style>
                        <Style TargetType="RadioButton">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="RadioButton">
                                        <Border Background="White" 
                                                BorderBrush="#E2E8F0" 
                                                BorderThickness="1" 
                                                CornerRadius="6" 
                                                Padding="10,8"
                                                Cursor="Hand">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="White"/>
                                                    <Setter Property="BorderBrush" Value="#E2E8F0"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsChecked, RelativeSource={RelativeSource TemplatedParent}}" Value="True">
                                                            <Setter Property="Background" Value="#ECFDF5"/>
                                                            <Setter Property="BorderBrush" Value="#10B981"/>
                                                            <Setter Property="BorderThickness" Value="2"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <StackPanel Orientation="Horizontal">
                                                <Ellipse Width="16" Height="16" Fill="#10B981" Margin="0,0,10,0">
                                                    <Ellipse.Style>
                                                        <Style TargetType="Ellipse">
                                                            <Setter Property="Fill" Value="#D1D5DB"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsChecked, RelativeSource={RelativeSource TemplatedParent}}" Value="True">
                                                                    <Setter Property="Fill" Value="#10B981"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Ellipse.Style>
                                                </Ellipse>
                                                <TextBlock Text="Active" FontSize="14" Foreground="#1E293B" VerticalAlignment="Center">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Foreground" Value="#64748B"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsChecked, RelativeSource={RelativeSource TemplatedParent}}" Value="True">
                                                                    <Setter Property="Foreground" Value="#1E293B"/>
                                                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </StackPanel>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </RadioButton.Style>
                </RadioButton>

                <!-- Inactive -->
                <RadioButton Content="Inactive" IsChecked="{Binding IsInactiveSelected}" 
                            FontSize="14" Margin="0,0,0,10" Padding="10,8">
                    <RadioButton.Style>
                        <Style TargetType="RadioButton">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="RadioButton">
                                        <Border Background="White" 
                                                BorderBrush="#E2E8F0" 
                                                BorderThickness="1" 
                                                CornerRadius="6" 
                                                Padding="10,8"
                                                Cursor="Hand">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="White"/>
                                                    <Setter Property="BorderBrush" Value="#E2E8F0"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsChecked, RelativeSource={RelativeSource TemplatedParent}}" Value="True">
                                                            <Setter Property="Background" Value="#FEF3C7"/>
                                                            <Setter Property="BorderBrush" Value="#F59E0B"/>
                                                            <Setter Property="BorderThickness" Value="2"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <StackPanel Orientation="Horizontal">
                                                <Ellipse Width="16" Height="16" Fill="#F59E0B" Margin="0,0,10,0">
                                                    <Ellipse.Style>
                                                        <Style TargetType="Ellipse">
                                                            <Setter Property="Fill" Value="#D1D5DB"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsChecked, RelativeSource={RelativeSource TemplatedParent}}" Value="True">
                                                                    <Setter Property="Fill" Value="#F59E0B"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Ellipse.Style>
                                                </Ellipse>
                                                <TextBlock Text="Inactive" FontSize="14" Foreground="#1E293B" VerticalAlignment="Center">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Foreground" Value="#64748B"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsChecked, RelativeSource={RelativeSource TemplatedParent}}" Value="True">
                                                                    <Setter Property="Foreground" Value="#1E293B"/>
                                                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </StackPanel>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </RadioButton.Style>
                </RadioButton>


                <!-- Terminated -->
                <RadioButton Content="Terminated" IsChecked="{Binding IsTerminatedSelected}" 
                            FontSize="14" Margin="0,0,0,10" Padding="10,8">
                    <RadioButton.Style>
                        <Style TargetType="RadioButton">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="RadioButton">
                                        <Border Background="White" 
                                                BorderBrush="#E2E8F0" 
                                                BorderThickness="1" 
                                                CornerRadius="6" 
                                                Padding="10,8"
                                                Cursor="Hand">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="White"/>
                                                    <Setter Property="BorderBrush" Value="#E2E8F0"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsChecked, RelativeSource={RelativeSource TemplatedParent}}" Value="True">
                                                            <Setter Property="Background" Value="#FEE2E2"/>
                                                            <Setter Property="BorderBrush" Value="#EF4444"/>
                                                            <Setter Property="BorderThickness" Value="2"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <StackPanel Orientation="Horizontal">
                                                <Ellipse Width="16" Height="16" Fill="#EF4444" Margin="0,0,10,0">
                                                    <Ellipse.Style>
                                                        <Style TargetType="Ellipse">
                                                            <Setter Property="Fill" Value="#D1D5DB"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsChecked, RelativeSource={RelativeSource TemplatedParent}}" Value="True">
                                                                    <Setter Property="Fill" Value="#EF4444"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Ellipse.Style>
                                                </Ellipse>
                                                <TextBlock Text="Terminated" FontSize="14" Foreground="#1E293B" VerticalAlignment="Center">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Foreground" Value="#64748B"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsChecked, RelativeSource={RelativeSource TemplatedParent}}" Value="True">
                                                                    <Setter Property="Foreground" Value="#1E293B"/>
                                                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </StackPanel>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </RadioButton.Style>
                </RadioButton>
            </StackPanel>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancel" Width="100" Height="35" Margin="0,0,10,0"
                    Background="#F1F5F9" Foreground="#64748B" BorderBrush="#D1D5DB" 
                    BorderThickness="1" FontWeight="Medium" Cursor="Hand"
                    Command="{Binding CancelCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
            <Button Content="Update Status" Width="120" Height="35"
                    Background="#10B981" Foreground="White" BorderThickness="0" 
                    FontWeight="SemiBold" Cursor="Hand"
                    Command="{Binding UpdateStatusCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
        </StackPanel>
    </Grid>
</Window>
