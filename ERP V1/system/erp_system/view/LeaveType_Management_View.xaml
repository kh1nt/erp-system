<UserControl x:Class="erp_system.view.LeaveType_Management_View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:erp_system.view"
             xmlns:view_model="clr-namespace:erp_system.view_model"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="800">
    <UserControl.DataContext>
        <view_model:LeaveType_Management_View_Model />
    </UserControl.DataContext>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

        <!-- Header and Add Button -->
        <DockPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="Leave Types Management" FontWeight="Bold" FontSize="18" DockPanel.Dock="Left"/>
            <Button Content="Add New Leave Type" Command="{Binding AddLeaveType_Command}" 
                    DockPanel.Dock="Right" Padding="15,8" Background="#4CAF50" 
                    Foreground="White" BorderThickness="0">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="5" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
        </DockPanel>

        <!-- Leave Types DataGrid -->
        <Border Grid.Row="1" CornerRadius="10" BorderBrush="#eee" BorderThickness="1" Padding="20" Background="White">
            <DataGrid ItemsSource="{Binding LeaveTypes}" AutoGenerateColumns="False" 
                      CanUserAddRows="False" GridLinesVisibility="None" RowHeaderWidth="0"
                      CanUserResizeColumns="True" CanUserSortColumns="True"
                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                      ScrollViewer.HorizontalScrollBarVisibility="Auto"
                      MinHeight="200" MaxHeight="400">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Leave Type" Binding="{Binding TypeName}" Width="*" MinWidth="150"/>
                    <DataGridTextColumn Header="Max Days" Binding="{Binding MaxDays}" Width="*" MinWidth="100"/>
                    <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*" MinWidth="200"/>
                    <DataGridTemplateColumn Header="Actions" Width="150" MinWidth="150">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Content="Edit" Command="{Binding DataContext.EditLeaveType_Command, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                            CommandParameter="{Binding}" Padding="8,4" Margin="2" Background="#2196F3" 
                                            Foreground="White" BorderThickness="0" FontSize="11">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}" 
                                                                    CornerRadius="3" Padding="{TemplateBinding Padding}">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                    <Button Content="Delete" Command="{Binding DataContext.DeleteLeaveType_Command, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                            CommandParameter="{Binding}" Padding="8,4" Margin="2" Background="#F44336" 
                                            Foreground="White" BorderThickness="0" FontSize="11">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}" 
                                                                    CornerRadius="3" Padding="{TemplateBinding Padding}">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
        </Grid>
    </ScrollViewer>
</UserControl>
