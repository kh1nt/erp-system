<Window x:Class="erp_system.view.AddPerformanceReviewDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{Binding DialogTitle}" Height="520" Width="620"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="#F8F9FA">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with Icon -->
        <Border Grid.Row="0" Background="White" CornerRadius="6" Padding="12" Margin="0,0,0,10" 
                BorderBrush="#E0E0E0" BorderThickness="1">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="⭐" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding DialogTitle}" FontSize="16" FontWeight="Bold" 
                           Foreground="#2C3E50" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Form Container -->
        <Border Grid.Row="1" Background="White" CornerRadius="6" Padding="15" 
                BorderBrush="#E0E0E0" BorderThickness="1">
            <StackPanel>
                <!-- Review Date -->
                <StackPanel Margin="0,0,0,12">
                    <TextBlock Text="📅 Review Date *" FontWeight="SemiBold" FontSize="12" 
                               Margin="0,0,0,4" Foreground="#34495E"/>
                    <DatePicker SelectedDate="{Binding ReviewDate}" Width="200" HorizontalAlignment="Left" 
                               FontSize="12" Padding="6,4" Background="#F8F9FA" BorderBrush="#BDC3C7" 
                               BorderThickness="1"/>
                </StackPanel>

                <!-- Employee -->
                <StackPanel Margin="0,0,0,12">
                    <TextBlock Text="👤 Employee *" FontWeight="SemiBold" FontSize="12" 
                               Margin="0,0,0,4" Foreground="#34495E"/>
                    <ComboBox ItemsSource="{Binding Employees}" SelectedItem="{Binding SelectedEmployee}" 
                              Width="300" HorizontalAlignment="Left" FontSize="12" Padding="6,4" 
                              Background="#F8F9FA" BorderBrush="#BDC3C7" BorderThickness="1"
                              DisplayMemberPath="DisplayName" SelectedValuePath="EmployeeID"/>
                </StackPanel>

                <!-- Performance Score -->
                <StackPanel Margin="0,0,0,12">
                    <TextBlock Text="⭐ Performance Score *" FontWeight="SemiBold" FontSize="12" 
                               Margin="0,0,0,4" Foreground="#34495E"/>
                    <StackPanel Orientation="Horizontal">
                        <Slider Value="{Binding Score}" Minimum="1" Maximum="5" Width="200" 
                                TickFrequency="0.5" IsSnapToTickEnabled="True" Margin="0,0,10,0"/>
                        <TextBlock Text="{Binding Score, StringFormat={}{0:F1}}" FontWeight="Bold" 
                                   FontSize="14" VerticalAlignment="Center" MinWidth="30"/>
                    </StackPanel>
                    <TextBlock Text="1.0 = Poor, 2.0 = Below Average, 3.0 = Average, 4.0 = Good, 5.0 = Excellent" 
                               FontSize="10" Foreground="#7F8C8D" Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Remarks -->
                <StackPanel Margin="0,0,0,12">
                    <TextBlock Text="📝 Remarks" FontWeight="SemiBold" FontSize="12" 
                               Margin="0,0,0,4" Foreground="#34495E"/>
                    <TextBox Text="{Binding Remarks}" Width="500" Height="80" HorizontalAlignment="Left" 
                            Padding="8,6" FontSize="12" Background="#F8F9FA" BorderBrush="#BDC3C7" 
                            BorderThickness="1" TextWrapping="Wrap" AcceptsReturn="True" 
                            VerticalScrollBarVisibility="Auto"/>
                </StackPanel>

            </StackPanel>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Cancel" Width="80" Height="35" Margin="0,0,10,0" 
                    Background="#E74C3C" Foreground="White" FontWeight="Bold" BorderThickness="0" 
                    Cursor="Hand" Click="CancelButton_Click"/>
            <Button Content="Save Review" Width="100" Height="35" 
                    Background="#FACC15" Foreground="Black" FontWeight="Bold" BorderThickness="0" 
                    Cursor="Hand" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
