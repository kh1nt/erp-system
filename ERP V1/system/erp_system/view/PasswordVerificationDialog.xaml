<Window x:Class="erp_system.view.PasswordVerificationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:erp_system.view"
        Title="Password Verification" Height="400" Width="450"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="#F8F9FA">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="ðŸ” Password Verification Required" 
                       FontSize="18" FontWeight="Bold" 
                       HorizontalAlignment="Center" 
                       Foreground="#2D3748"/>
            <TextBlock Text="Please enter your password to confirm this action" 
                       FontSize="12" 
                       HorizontalAlignment="Center" 
                       Foreground="#718096" 
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Action Description -->
        <Border Grid.Row="1" Background="#E6FFFA" BorderBrush="#38B2AC" BorderThickness="1" 
                CornerRadius="8" Padding="15" Margin="0,0,0,15">
            <TextBlock Text="{Binding ActionDescription}" 
                       FontWeight="SemiBold" 
                       Foreground="#2C7A7B" 
                       TextWrapping="Wrap"/>
        </Border>

        <!-- Username Display -->
        <StackPanel Grid.Row="2" Margin="0,0,0,10">
            <TextBlock Text="Username:" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <Border Background="#F7FAFC" 
                    BorderBrush="#E2E8F0" 
                    BorderThickness="1" 
                    CornerRadius="5" 
                    Padding="10,8">
                <TextBlock Text="{Binding CurrentUser}" 
                           FontSize="14" 
                           Foreground="#4A5568"/>
            </Border>
        </StackPanel>

        <!-- Password Input -->
        <StackPanel Grid.Row="3" Margin="0,0,0,20">
            <TextBlock Text="Password:" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <Border BorderBrush="#E2E8F0" 
                    BorderThickness="1" 
                    CornerRadius="5">
                <PasswordBox x:Name="PasswordBox" 
                             FontSize="14" 
                             Padding="10,8" 
                             BorderThickness="0"
                             IsEnabled="True"
                             Focusable="True"
                             TabIndex="1"
                             KeyDown="PasswordBox_KeyDown"/>
            </Border>
        </StackPanel>

        <!-- Error Message -->
        <TextBlock Grid.Row="4" 
                   Text="{Binding ErrorMessage}" 
                   Foreground="#E53E3E" 
                   FontSize="12" 
                   TextWrapping="Wrap" 
                   Visibility="{Binding HasError, Converter={x:Static local:BoolToVisibilityConverter.Instance}}"
                   Margin="0,0,0,10"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancel" 
                    Command="{Binding CancelCommand}" 
                    Padding="20,8" 
                    Margin="0,0,10,0" 
                    Background="#E2E8F0" 
                    Foreground="#4A5568" 
                    BorderThickness="0" 
                    MinWidth="80">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="5" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
            <Button Content="Verify" 
                    Click="VerifyButton_Click"
                    Padding="20,8" 
                    Background="#3182CE" 
                    Foreground="White" 
                    BorderThickness="0" 
                    MinWidth="80"
                    IsDefault="True">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="5" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>
