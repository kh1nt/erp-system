<Window x:Class="erp_system.view.CreateLeaveRequestDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:erp_system.view"
        Title="Create New Leave Request" Height="450" Width="600"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="#F8FAFC">
    
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="ðŸ“ Create New Leave Request" FontSize="18" FontWeight="Bold" Foreground="#1F2937" Margin="0,0,0,4"/>
            <TextBlock Text="Fill in the details below to create a new leave request." 
                       FontSize="12" Foreground="#6B7280"/>
        </StackPanel>

        <!-- Form Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Employee Selection -->
                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,8,12">
                        <TextBlock Text="Employee *" FontWeight="SemiBold" FontSize="11" Foreground="#374151" Margin="0,0,0,4"/>
                        <ComboBox ItemsSource="{Binding Employees}" SelectedItem="{Binding SelectedEmployee}" 
                                  Height="32" Padding="6" Background="White" BorderBrush="#D1D5DB" BorderThickness="1">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Converter={x:Static local:FullNameConverter.Instance}}" Padding="2"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>

                    <!-- Leave Type Selection -->
                    <StackPanel Grid.Row="0" Grid.Column="1" Margin="8,0,0,12">
                        <TextBlock Text="Leave Type *" FontWeight="SemiBold" FontSize="11" Foreground="#374151" Margin="0,0,0,4"/>
                        <ComboBox ItemsSource="{Binding LeaveTypes}" SelectedItem="{Binding SelectedLeaveType}" DisplayMemberPath="TypeName" 
                                  Height="32" Padding="6" Background="White" BorderBrush="#D1D5DB" BorderThickness="1"/>
                    </StackPanel>

                            <!-- Start Date -->
                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,8,12">
                                <TextBlock Text="Start Date *" FontWeight="SemiBold" FontSize="11" Foreground="#374151" Margin="0,0,0,4"/>
                                <DatePicker SelectedDate="{Binding StartDate}" Height="32" Padding="6" Background="#F3F4F6" BorderBrush="#D1D5DB" BorderThickness="1" IsEnabled="False"/>
                            </StackPanel>

                            <!-- End Date -->
                            <StackPanel Grid.Row="1" Grid.Column="1" Margin="8,0,0,12">
                                <TextBlock Text="End Date *" FontWeight="SemiBold" FontSize="11" Foreground="#374151" Margin="0,0,0,4"/>
                                <DatePicker SelectedDate="{Binding EndDate}" Height="32" Padding="6" Background="#F3F4F6" BorderBrush="#D1D5DB" BorderThickness="1" IsEnabled="False"/>
                            </StackPanel>

                    <!-- Available Days Display -->
                    <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Background="#E0F2FE" CornerRadius="6" Padding="10" Margin="0,0,0,12">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                <TextBlock Text="â„¹ï¸" FontSize="14" Margin="0,0,6,0"/>
                                <StackPanel>
                                    <TextBlock Text="Available Leave Days" FontWeight="SemiBold" FontSize="11" Foreground="#0F172A"/>
                                    <TextBlock Text="{Binding AvailableDays, StringFormat={}{0} days remaining}" FontSize="12" Foreground="#1E40AF"/>
                                </StackPanel>
                            </StackPanel>
                            <TextBlock Text="ðŸ“… Dates are automatically set based on leave type" FontSize="10" Foreground="#64748B" FontStyle="Italic"/>
                        </StackPanel>
                    </Border>

                    <!-- Reason -->
                    <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,0,12">
                        <TextBlock Text="Reason (Optional)" FontWeight="SemiBold" FontSize="11" Foreground="#374151" Margin="0,0,0,4"/>
                        <TextBox Text="{Binding Reason}" Height="50" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"
                                 Padding="6" Background="White" BorderBrush="#D1D5DB" BorderThickness="1"/>
                    </StackPanel>

                    <!-- Validation Messages -->
                    <Border Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" 
                            Background="#FEF2F2" BorderBrush="#FECACA" BorderThickness="1" CornerRadius="4" Padding="8"
                            Visibility="{Binding HasValidationErrors, Converter={x:Static local:BoolToVisibilityConverter.Instance}}">
                        <StackPanel>
                            <TextBlock Text="âš ï¸ Please fix the following issues:" FontWeight="SemiBold" FontSize="10" Foreground="#DC2626" Margin="0,0,0,2"/>
                            <TextBlock Text="{Binding ValidationMessage}" FontSize="10" Foreground="#DC2626"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="Cancel" Width="80" Height="32" Margin="0,0,8,0"
                    Background="#E5E7EB" Foreground="#374151" Command="{Binding Cancel_Command}"/>
            <Button Content="Create Request" Width="120" Height="32"
                    Background="#10B981" Foreground="White" Command="{Binding CreateRequest_Command}"/>
        </StackPanel>
    </Grid>
</Window>
