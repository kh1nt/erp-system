<UserControl x:Class="erp_system.view.Payroll_View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:erp_system.view"
             xmlns:view_model="clr-namespace:erp_system.view_model"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <UserControl.DataContext>
        <view_model:Payroll_View_Model />
    </UserControl.DataContext>
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- ===== Top Section Cards ===== -->
            <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,0,0,20">
                <UniformGrid DockPanel.Dock="Bottom" Columns="3" HorizontalAlignment="Stretch">
                    <!-- Card 1 -->
                    <Border Background="White" CornerRadius="8" BorderBrush="#EEE" BorderThickness="1" Padding="15" Margin="5">
                        <StackPanel>
                            <TextBlock Text="Total Payroll" FontWeight="Bold" FontSize="14"/>
                            <TextBlock Text="{Binding TotalPayroll, StringFormat=₱{0:N2}}" FontWeight="SemiBold" FontSize="24" Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Card 2 -->
                    <Border Background="White" CornerRadius="8" BorderBrush="#EEE" BorderThickness="1" Padding="15" Margin="5">
                        <StackPanel>
                            <TextBlock Text="Total Bonuses" FontWeight="Bold" FontSize="14"/>
                            <TextBlock Text="{Binding TotalCommissions, StringFormat=₱{0:N2}}" FontWeight="SemiBold" FontSize="24" Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Card 3 -->
                    <Border Background="White" CornerRadius="8" BorderBrush="#EEE" BorderThickness="1" Padding="15" Margin="5">
                        <StackPanel>
                            <TextBlock Text="Records Count" FontWeight="Bold" FontSize="14"/>
                            <TextBlock Text="{Binding PayrollRecords.Count, StringFormat='{}{0} Records'}" FontWeight="SemiBold" FontSize="24" Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>
                </UniformGrid>

            </DockPanel>


            <!-- ===== Payroll Records ===== -->
            <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <!-- Header with title, filter, and action buttons -->
                    <DockPanel Margin="0,0,0,15">
                        <TextBlock Text="Payroll Records" FontSize="22" FontWeight="Bold" DockPanel.Dock="Left"/>
                        
                        <!-- Filter Section -->
                        <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" Margin="20,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="Filter:" FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <ComboBox ItemsSource="{Binding AvailableMonths}" SelectedItem="{Binding SelectedMonth}" 
                                      Width="120" Height="35" DisplayMemberPath="DisplayText" SelectedValuePath="Value" Margin="0,0,10,0"
                                      HorizontalContentAlignment="Left" VerticalContentAlignment="Center"/>
                            <ComboBox ItemsSource="{Binding AvailableYears}" SelectedItem="{Binding SelectedYear}" 
                                      Width="80" Height="35" DisplayMemberPath="DisplayText" SelectedValuePath="Value"
                                      HorizontalContentAlignment="Left" VerticalContentAlignment="Center"/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right">
                            <Button Content="🔄 Refresh" Command="{Binding Refresh_Command}" Width="100" Height="40" Margin="0,0,10,0"
                                    Background="#E5E7EB" Foreground="#111827" FontWeight="Bold" BorderThickness="0" Cursor="Hand"/>
                            <Button Content=" + Generate Payroll " Command="{Binding GeneratePayroll_Command}" Width="160" Height="40"
                                    Background="#FACC15" Foreground="Black" FontWeight="Bold" BorderThickness="0" Cursor="Hand"/>
                        </StackPanel>
                    </DockPanel>
                    <DataGrid ItemsSource="{Binding PayrollRecords}" AutoGenerateColumns="False" HeadersVisibility="Column" CanUserAddRows="False"
                              GridLinesVisibility="None" RowHeaderWidth="0" AlternatingRowBackground="#F8FAFC" 
                              RowHeight="48" FontSize="13" Background="#FFFFFF" BorderThickness="0"
                              CanUserResizeColumns="True" CanUserSortColumns="True"
                              VirtualizingPanel.IsVirtualizing="False" VirtualizingPanel.VirtualizationMode="Standard"
                              ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Auto"
                              MinHeight="300" MaxHeight="500">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#F1F5F9"/>
                                <Setter Property="Foreground" Value="#475569"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="FontSize" Value="12"/>
                                <Setter Property="Padding" Value="16,12"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                <Setter Property="VerticalContentAlignment" Value="Center"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Background" Value="White"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Margin" Value="0,0"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F1F5F9"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#E0F2FE"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>
                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="Padding" Value="16,12"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                                <Setter Property="Foreground" Value="#1E293B"/>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Foreground" Value="#0F172A"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.CellStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding PayrollID}" Width="50" MinWidth="50" MaxWidth="60"/>
                            <DataGridTextColumn Header="Employee" Binding="{Binding EmployeeName}" Width="*" MinWidth="120"/>
                            <DataGridTextColumn Header="Position" Binding="{Binding Position}" Width="*" MinWidth="100"/>
                            <DataGridTextColumn Header="Period Start" Binding="{Binding PeriodStart, StringFormat=yyyy-MM-dd}" Width="*" MinWidth="100"/>
                            <DataGridTextColumn Header="Period End" Binding="{Binding PeriodEnd, StringFormat=yyyy-MM-dd}" Width="*" MinWidth="100"/>
                            <DataGridTextColumn Header="Basic Salary" Binding="{Binding BasicSalary, StringFormat=₱{0:N0}}" Width="*" MinWidth="100"/>
                            <DataGridTextColumn Header="Bonuses" Binding="{Binding Bonuses, StringFormat=₱{0:N0}}" Width="*" MinWidth="100"/>
                            <DataGridTextColumn Header="Deductions" Binding="{Binding Deductions, StringFormat=₱{0:N0}}" Width="*" MinWidth="100"/>
                            <DataGridTextColumn Header="Net Pay" Binding="{Binding NetPay, StringFormat=₱{0:N0}}" Width="*" MinWidth="100">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="Foreground" Value="#059669"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>

            <!-- ===== Philippine Deduction Breakdown ===== -->
            <Border Grid.Row="2" Background="White" CornerRadius="8" Padding="20">
                <StackPanel>
                    <TextBlock Text="Philippine Deduction Breakdown" 
                               FontSize="16" FontWeight="Bold" Margin="0,0,0,20"/>

                    <UniformGrid Columns="4" HorizontalAlignment="Stretch" VerticalAlignment="Top">
                        <!-- SSS -->
                        <Border Background="#F0F9FF" CornerRadius="8" Padding="15" Margin="10">
                            <StackPanel>
                                <TextBlock Text="SSS" FontWeight="Bold" FontSize="14" Foreground="#0369A1"/>
                                <TextBlock Text="4.5%" FontSize="16" FontWeight="SemiBold" Margin="0,5,0,0" Foreground="#0369A1"/>
                                <TextBlock Text="Social Security System contribution (max ₱1,125)" 
                                           TextWrapping="Wrap" Foreground="#64748B" FontSize="12" 
                                           Margin="0,10,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- PhilHealth -->
                        <Border Background="#F0FDF4" CornerRadius="8" Padding="15" Margin="10">
                            <StackPanel>
                                <TextBlock Text="PhilHealth" FontWeight="Bold" FontSize="14" Foreground="#059669"/>
                                <TextBlock Text="2.75%" FontSize="16" FontWeight="SemiBold" Margin="0,5,0,0" Foreground="#059669"/>
                                <TextBlock Text="Health insurance contribution (max ₱1,750)" 
                                           TextWrapping="Wrap" Foreground="#64748B" FontSize="12" 
                                           Margin="0,10,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Pag-IBIG -->
                        <Border Background="#F0F9FF" CornerRadius="8" Padding="15" Margin="10">
                            <StackPanel>
                                <TextBlock Text="Pag-IBIG" FontWeight="Bold" FontSize="14" Foreground="#0369A1"/>
                                <TextBlock Text="2%" FontSize="16" FontWeight="SemiBold" Margin="0,5,0,0" Foreground="#0369A1"/>
                                <TextBlock Text="Housing fund contribution (max ₱100)" 
                                           TextWrapping="Wrap" Foreground="#64748B" FontSize="12" 
                                           Margin="0,10,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Income Tax -->
                        <Border Background="#F3F4F6" CornerRadius="8" Padding="15" Margin="10">
                            <StackPanel>
                                <TextBlock Text="Income Tax" FontWeight="Bold" FontSize="14" Foreground="#374151"/>
                                <TextBlock Text="15%" FontSize="16" FontWeight="SemiBold" Margin="0,5,0,0" Foreground="#374151"/>
                                <TextBlock Text="Withholding tax on excess over ₱25,000" 
                                           TextWrapping="Wrap" Foreground="#64748B" FontSize="12" 
                                           Margin="0,10,0,0"/>
                            </StackPanel>
                        </Border>
                    </UniformGrid>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>