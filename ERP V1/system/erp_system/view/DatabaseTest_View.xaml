<Window x:Class="erp_system.view.DatabaseTest_View"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Database Connection Test" Height="400" Width="600"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="Database Connection Test" 
                   FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>
        
        <ScrollViewer Grid.Row="1">
            <StackPanel>
                <TextBlock Text="Connection Status:" FontWeight="Bold" Margin="0,0,0,10"/>
                <TextBlock x:Name="ConnectionStatus" Text="Testing..." 
                           Foreground="Orange" Margin="0,0,0,20"/>
                
                <TextBlock Text="Table Status:" FontWeight="Bold" Margin="0,0,0,10"/>
                <TextBlock x:Name="TableStatus" Text="Checking tables..." 
                           Foreground="Orange" Margin="0,0,0,20"/>
                
                <TextBlock Text="Record Counts:" FontWeight="Bold" Margin="0,0,0,10"/>
                <TextBlock x:Name="RecordCounts" Text="Counting records..." 
                           Foreground="Orange" Margin="0,0,0,20"/>
                
                <TextBlock Text="Sample Users:" FontWeight="Bold" Margin="0,0,0,10"/>
                <TextBlock x:Name="SampleUsers" Text="Loading users..." 
                           Foreground="Orange"/>
            </StackPanel>
        </ScrollViewer>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button x:Name="TestButton" Content="Test Connection" 
                    Click="TestButton_Click" Margin="0,0,10,0" 
                    Padding="20,10"/>
            <Button x:Name="CloseButton" Content="Close" 
                    Click="CloseButton_Click" 
                    Padding="20,10"/>
        </StackPanel>
    </Grid>
</Window>
