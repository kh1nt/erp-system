<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ========== 🎨 COLOR DEFINITIONS ========== -->
    <!-- Primary Palette -->
    <Color x:Key="PrimaryBluePurple">#5A4FCF</Color>
    <Color x:Key="PrimaryYellow">#FFD54F</Color>
    <Color x:Key="PrimaryWhite">#FFFFFF</Color>

    <!-- Variants -->
    <Color x:Key="PrimaryBluePurpleDark">#3E357F</Color>
    <Color x:Key="PrimaryBluePurpleLight">#8C84F7</Color>
    <Color x:Key="PrimaryYellowDark">#E6B800</Color>
    <Color x:Key="PrimaryYellowLight">#FFEB99</Color>

    <!-- Neutral Shades -->
    <Color x:Key="NeutralGrayLight">#F5F5F5</Color>
    <Color x:Key="NeutralGrayMedium">#CCCCCC</Color>
    <Color x:Key="NeutralGrayDark">#333333</Color>

    <!-- Alert Colors -->
    <Color x:Key="SuccessGreen">#4CAF50</Color>
    <Color x:Key="WarningOrange">#FF9800</Color>
    <Color x:Key="ErrorRed">#F44336</Color>

    <!-- Cstom -->
    <Color x:Key="CreamWhite">#FFDEAD</Color>
    <Color x:Key="FadedBluePurple">#ECEBFC</Color>

    <!-- Custom -->
    <SolidColorBrush x:Key="Color1" Color="{StaticResource CreamWhite}"/>
    <SolidColorBrush x:Key="BackgroundColor" Color="{StaticResource FadedBluePurple}"/>
    <!-- Alias for views expecting BackgroundBrush -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource FadedBluePurple}"/>
    <SolidColorBrush x:Key="BorderColor" Color="{StaticResource NeutralGrayMedium}"/>
    <SolidColorBrush x:Key="OpaqueWhite" Color="{StaticResource PrimaryWhite}" Opacity=".4"/>
    <SolidColorBrush x:Key="FadeWhite" Color="{StaticResource PrimaryWhite}" Opacity=".15"/>
    <SolidColorBrush x:Key="HoverWhite" Color="{StaticResource PrimaryWhite}" Opacity=".2"/>

    <!-- ========== 🖌 BRUSHES ========== -->
    <!-- Solid Brushes -->
    <SolidColorBrush x:Key="BgPrimary" Color="{StaticResource PrimaryBluePurple}"/>
    <SolidColorBrush x:Key="BgSecondary" Color="{StaticResource PrimaryYellow}"/>
    <SolidColorBrush x:Key="BgLight" Color="{StaticResource NeutralGrayLight}"/>
    <SolidColorBrush x:Key="BgDark" Color="{StaticResource NeutralGrayDark}"/>

    <SolidColorBrush x:Key="FontLight" Color="{StaticResource PrimaryWhite}"/>
    <SolidColorBrush x:Key="FontDark" Color="{StaticResource NeutralGrayDark}"/>
    <SolidColorBrush x:Key="BorderBrushColor" Color="{StaticResource PrimaryBluePurpleDark}"/>

    <!-- Status Brushes -->
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessGreen}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningOrange}"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorRed}"/>

    <!-- ========== 🌈 GRADIENTS ========== -->
    <LinearGradientBrush x:Key="GradientPrimary" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource PrimaryBluePurple}" Offset="0.0"/>
        <GradientStop Color="{StaticResource PrimaryBluePurpleLight}" Offset="1.0"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="GradientSecondary" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource PrimaryYellow}" Offset="0.0"/>
        <GradientStop Color="{StaticResource PrimaryYellowLight}" Offset="1.0"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="GradientError" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource ErrorRed}" Offset="0.0"/>
        <GradientStop Color="#FF6A6A" Offset="1.0"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="BorderGradient" StartPoint="1,1" EndPoint="0,0">
        <GradientStop Color="{StaticResource PrimaryBluePurple}" Offset="0.5" />
        <GradientStop Color="{StaticResource PrimaryYellow}" Offset="1" />
        <GradientStop Color="{StaticResource PrimaryWhite}" Offset="0" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="LoginGradient" StartPoint="0.75,0" EndPoint="1,0.95" Opacity=".92">
        <GradientStop Color="{StaticResource PrimaryBluePurple}" Offset="0.10" />
        <GradientStop Color="{StaticResource PrimaryYellow}" Offset="0.95" />
    </LinearGradientBrush>

    <!-- Additional commonly used brushes referenced by views -->
</ResourceDictionary>